---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllProductScrapersWithStatus } from '../../lib/db/queries/scrapers';
import { getAllRecentRuns } from '../../lib/db/queries/scraper-runs';
import { getAllNbnRefreshRuns } from '../../lib/db/queries/nbn';
import { formatRelativeTime } from '../../lib/utils';

const allScrapers = await getAllProductScrapersWithStatus();
const recentRuns = await getAllRecentRuns(30);
const nbnRuns = await getAllNbnRefreshRuns(20);

// Helper to check if issue is dismissed (dismissed after last scrape)
const isIssueDismissed = (ps: typeof allScrapers[0]) => {
  if (!ps.issueDismissedAt) return false;
  if (!ps.lastScrapedAt) return true; // Dismissed before ever running
  return ps.issueDismissedAt >= ps.lastScrapedAt;
};

// Categorize scrapers (excluding dismissed ones from issue lists)
const failedScrapers = allScrapers.filter(ps => ps.lastScrapeStatus === 'error' && !isIssueDismissed(ps));
const noPricesScrapers = allScrapers.filter(ps => ps.lastScrapeStatus === 'warning' && !isIssueDismissed(ps));
const neverRunScrapers = allScrapers.filter(ps => !ps.lastScrapedAt && !isIssueDismissed(ps));
const successfulScrapers = allScrapers.filter(ps => ps.lastScrapeStatus === 'success');
const dismissedScrapers = allScrapers.filter(ps => isIssueDismissed(ps) && ps.lastScrapeStatus !== 'success');

// Stats
const totalScrapers = allScrapers.length;
const issueCount = failedScrapers.length + noPricesScrapers.length + neverRunScrapers.length;

// All issue IDs for dismiss all
const allIssueIds = [
  ...failedScrapers.map(ps => ps.id),
  ...noPricesScrapers.map(ps => ps.id),
  ...neverRunScrapers.map(ps => ps.id)
];
---

<BaseLayout title="Scraper History">
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold tracking-tight">Scraper History</h1>
        <p class="text-muted-foreground">Monitor scraper runs and troubleshoot problems</p>
      </div>
      <div class="flex items-center gap-2">
        {issueCount > 0 && (
          <button
            id="dismiss-all-btn"
            class="inline-flex items-center gap-2 rounded-md border border-input bg-background px-4 py-2 text-sm font-medium hover:bg-muted"
            data-ids={JSON.stringify(allIssueIds)}
          >
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
              <path d="M18 6 6 18" />
              <path d="m6 6 12 12" />
            </svg>
            Dismiss All ({issueCount})
          </button>
        )}
        <a
          href="/"
          class="inline-flex items-center gap-2 rounded-md border border-input bg-background px-4 py-2 text-sm font-medium hover:bg-muted"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
            <path d="m15 18-6-6 6-6" />
          </svg>
          Back to Dashboard
        </a>
      </div>
    </div>

    <!-- Stats cards -->
    <div class="grid gap-4 md:grid-cols-5">
      <div class="rounded-lg border border-border bg-card p-4">
        <div class="text-sm font-medium text-muted-foreground">Total Scrapers</div>
        <div class="mt-1 text-2xl font-bold">{totalScrapers}</div>
      </div>
      <div class="rounded-lg border border-border bg-card p-4">
        <div class="text-sm font-medium text-muted-foreground">Healthy</div>
        <div class="mt-1 text-2xl font-bold text-green-500">{successfulScrapers.length}</div>
      </div>
      <div class="rounded-lg border border-border bg-card p-4">
        <div class="text-sm font-medium text-muted-foreground">Failed</div>
        <div class="mt-1 text-2xl font-bold text-red-500">{failedScrapers.length}</div>
      </div>
      <div class="rounded-lg border border-border bg-card p-4">
        <div class="text-sm font-medium text-muted-foreground">No Prices</div>
        <div class="mt-1 text-2xl font-bold text-orange-500">{noPricesScrapers.length}</div>
      </div>
      <div class="rounded-lg border border-border bg-card p-4">
        <div class="text-sm font-medium text-muted-foreground">Never Run</div>
        <div class="mt-1 text-2xl font-bold text-yellow-500">{neverRunScrapers.length}</div>
      </div>
    </div>

    {issueCount === 0 ? (
      <div class="rounded-lg border border-border bg-card p-12 text-center">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mx-auto h-12 w-12 text-green-500">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
          <polyline points="22 4 12 14.01 9 11.01" />
        </svg>
        <h3 class="mt-4 text-lg font-semibold">All scrapers healthy!</h3>
        <p class="mt-2 text-muted-foreground">No issues detected with your scrapers.</p>
      </div>
    ) : (
      <div class="space-y-6">
        {/* Failed Scrapers */}
        {failedScrapers.length > 0 && (
          <div class="rounded-lg border border-red-500/20 bg-card">
            <div class="flex items-center gap-3 border-b border-border p-4">
              <div class="flex h-8 w-8 items-center justify-center rounded-full bg-red-500/10">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-red-500">
                  <circle cx="12" cy="12" r="10" />
                  <line x1="15" x2="9" y1="9" y2="15" />
                  <line x1="9" x2="15" y1="9" y2="15" />
                </svg>
              </div>
              <div>
                <h2 class="font-semibold text-red-500">Failed Scrapers</h2>
                <p class="text-sm text-muted-foreground">{failedScrapers.length} scrapers encountered errors</p>
              </div>
            </div>
            <div class="divide-y divide-border">
              {failedScrapers.map((ps) => (
                <div class="p-4 hover:bg-muted/50 transition-colors">
                  <div class="flex items-start justify-between gap-4">
                    <a href={`/products/${ps.product.id}`} class="min-w-0 flex-1 hover:underline">
                      <div class="flex items-center gap-2">
                        <span class="font-medium">
                          {ps.product.name}
                        </span>
                        <span class="rounded bg-muted px-2 py-0.5 text-xs text-muted-foreground">
                          {ps.scraper.name}
                        </span>
                      </div>
                      <p class="mt-1 text-sm text-muted-foreground truncate" title={ps.url}>
                        {ps.url}
                      </p>
                      {ps.lastScrapeError && (
                        <div class="mt-2 rounded bg-red-500/10 p-2 text-sm text-red-400">
                          {ps.lastScrapeError}
                        </div>
                      )}
                      <p class="mt-2 text-xs text-muted-foreground">
                        Last attempt: {ps.lastScrapedAt ? formatRelativeTime(ps.lastScrapedAt) : 'Never'}
                      </p>
                    </a>
                    <div class="flex items-center gap-1">
                      <button
                        class="run-scraper-btn inline-flex items-center justify-center rounded-md border border-input bg-background p-1.5 text-sm hover:bg-muted"
                        data-scraper-id={ps.id}
                        title="Retry scraper"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                          <polygon points="5 3 19 12 5 21 5 3"/>
                        </svg>
                      </button>
                      <button
                        class="dismiss-btn inline-flex items-center justify-center rounded-md border border-input bg-background p-1.5 text-sm hover:bg-muted"
                        data-scraper-id={ps.id}
                        title="Dismiss issue"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                          <path d="M18 6 6 18"/><path d="m6 6 12 12"/>
                        </svg>
                      </button>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}

        {/* No Prices Scrapers */}
        {noPricesScrapers.length > 0 && (
          <div class="rounded-lg border border-orange-500/20 bg-card">
            <div class="flex items-center gap-3 border-b border-border p-4">
              <div class="flex h-8 w-8 items-center justify-center rounded-full bg-orange-500/10">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-orange-500">
                  <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z" />
                  <line x1="12" x2="12" y1="9" y2="13" />
                  <line x1="12" x2="12.01" y1="17" y2="17" />
                </svg>
              </div>
              <div>
                <h2 class="font-semibold text-orange-500">No Prices Found</h2>
                <p class="text-sm text-muted-foreground">{noPricesScrapers.length} scrapers ran but found no prices</p>
              </div>
            </div>
            <div class="divide-y divide-border">
              {noPricesScrapers.map((ps) => (
                <div class="p-4 hover:bg-muted/50 transition-colors">
                  <div class="flex items-start justify-between gap-4">
                    <a href={`/products/${ps.product.id}`} class="min-w-0 flex-1 hover:underline">
                      <div class="flex items-center gap-2">
                        <span class="font-medium">
                          {ps.product.name}
                        </span>
                        <span class="rounded bg-muted px-2 py-0.5 text-xs text-muted-foreground">
                          {ps.scraper.name}
                        </span>
                      </div>
                      <p class="mt-1 text-sm text-muted-foreground truncate" title={ps.url}>
                        {ps.url}
                      </p>
                      <p class="mt-2 text-xs text-muted-foreground">
                        Last attempt: {ps.lastScrapedAt ? formatRelativeTime(ps.lastScrapedAt) : 'Never'}
                      </p>
                    </a>
                    <div class="flex items-center gap-1">
                      <button
                        class="run-scraper-btn inline-flex items-center justify-center rounded-md border border-input bg-background p-1.5 text-sm hover:bg-muted"
                        data-scraper-id={ps.id}
                        title="Retry scraper"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                          <polygon points="5 3 19 12 5 21 5 3"/>
                        </svg>
                      </button>
                      <button
                        class="dismiss-btn inline-flex items-center justify-center rounded-md border border-input bg-background p-1.5 text-sm hover:bg-muted"
                        data-scraper-id={ps.id}
                        title="Dismiss issue"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                          <path d="M18 6 6 18"/><path d="m6 6 12 12"/>
                        </svg>
                      </button>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}

        {/* Never Run Scrapers */}
        {neverRunScrapers.length > 0 && (
          <div class="rounded-lg border border-yellow-500/20 bg-card">
            <div class="flex items-center gap-3 border-b border-border p-4">
              <div class="flex h-8 w-8 items-center justify-center rounded-full bg-yellow-500/10">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-yellow-500">
                  <circle cx="12" cy="12" r="10" />
                  <line x1="12" x2="12" y1="8" y2="12" />
                  <line x1="12" x2="12.01" y1="16" y2="16" />
                </svg>
              </div>
              <div>
                <h2 class="font-semibold text-yellow-500">Never Run</h2>
                <p class="text-sm text-muted-foreground">{neverRunScrapers.length} scrapers haven't been executed yet</p>
              </div>
            </div>
            <div class="divide-y divide-border">
              {neverRunScrapers.map((ps) => (
                <div class="p-4 hover:bg-muted/50 transition-colors">
                  <div class="flex items-start justify-between gap-4">
                    <a href={`/products/${ps.product.id}`} class="min-w-0 flex-1 hover:underline">
                      <div class="flex items-center gap-2">
                        <span class="font-medium">
                          {ps.product.name}
                        </span>
                        <span class="rounded bg-muted px-2 py-0.5 text-xs text-muted-foreground">
                          {ps.scraper.name}
                        </span>
                      </div>
                      <p class="mt-1 text-sm text-muted-foreground truncate" title={ps.url}>
                        {ps.url}
                      </p>
                    </a>
                    <div class="flex items-center gap-1">
                      <button
                        class="run-scraper-btn inline-flex items-center justify-center rounded-md border border-input bg-background p-1.5 text-sm hover:bg-muted"
                        data-scraper-id={ps.id}
                        title="Run scraper"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                          <polygon points="5 3 19 12 5 21 5 3"/>
                        </svg>
                      </button>
                      <button
                        class="dismiss-btn inline-flex items-center justify-center rounded-md border border-input bg-background p-1.5 text-sm hover:bg-muted"
                        data-scraper-id={ps.id}
                        title="Dismiss issue"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                          <path d="M18 6 6 18"/><path d="m6 6 12 12"/>
                        </svg>
                      </button>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}

        {/* Dismissed Issues */}
        {dismissedScrapers.length > 0 && (
          <div class="rounded-lg border border-border bg-card opacity-60">
            <div class="flex items-center gap-3 border-b border-border p-4">
              <div class="flex h-8 w-8 items-center justify-center rounded-full bg-muted">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-muted-foreground">
                  <path d="M18 6 6 18" />
                  <path d="m6 6 12 12" />
                </svg>
              </div>
              <div>
                <h2 class="font-semibold text-muted-foreground">Dismissed</h2>
                <p class="text-sm text-muted-foreground">{dismissedScrapers.length} issues dismissed</p>
              </div>
            </div>
            <div class="divide-y divide-border">
              {dismissedScrapers.map((ps) => (
                <div class="p-4 hover:bg-muted/50 transition-colors">
                  <div class="flex items-start justify-between gap-4">
                    <a href={`/products/${ps.product.id}`} class="min-w-0 flex-1 hover:underline">
                      <div class="flex items-center gap-2">
                        <span class="font-medium text-muted-foreground">
                          {ps.product.name}
                        </span>
                        <span class="rounded bg-muted px-2 py-0.5 text-xs text-muted-foreground">
                          {ps.scraper.name}
                        </span>
                        <span class={`rounded px-2 py-0.5 text-xs ${ps.lastScrapeStatus === 'error' ? 'bg-red-500/10 text-red-400' : ps.lastScrapeStatus === 'warning' ? 'bg-orange-500/10 text-orange-400' : 'bg-yellow-500/10 text-yellow-400'}`}>
                          {ps.lastScrapeStatus === 'error' ? 'Failed' : ps.lastScrapeStatus === 'warning' ? 'No Prices' : 'Never Run'}
                        </span>
                      </div>
                    </a>
                    <button
                      class="run-scraper-btn inline-flex items-center justify-center rounded-md border border-input bg-background p-1.5 text-sm hover:bg-muted"
                      data-scraper-id={ps.id}
                      title="Retry scraper"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                        <polygon points="5 3 19 12 5 21 5 3"/>
                      </svg>
                    </button>
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}
      </div>
    )}

    {/* Recent Scraper Runs */}
    {recentRuns.length > 0 && (
      <div class="rounded-lg border border-border bg-card">
        <div class="flex items-center gap-3 p-4 border-b border-border">
          <div class="flex h-8 w-8 items-center justify-center rounded-full bg-primary/10">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-primary">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12 6 12 12 16 14"/>
            </svg>
          </div>
          <div>
            <h2 class="font-semibold">Recent Scraper Runs</h2>
            <p class="text-sm text-muted-foreground">Last {recentRuns.length} scraper executions</p>
          </div>
        </div>
        <div class="divide-y divide-border max-h-[500px] overflow-y-auto">
          {recentRuns.map((run) => (
            <div class="p-4 hover:bg-muted/50 transition-colors">
              <div class="flex items-start justify-between gap-4">
                <div class="min-w-0 flex-1">
                  <div class="flex items-center gap-2 flex-wrap">
                    <span class="font-medium">
                      {run.productScraper.product.name}
                    </span>
                    <span class="rounded bg-muted px-2 py-0.5 text-xs text-muted-foreground">
                      {run.productScraper.scraper.name}
                    </span>
                    <span class={`rounded px-2 py-0.5 text-xs ${
                      run.status === 'success' ? 'bg-green-500/10 text-green-500' :
                      run.status === 'cached' ? 'bg-blue-500/10 text-blue-500' :
                      run.status === 'error' ? 'bg-red-500/10 text-red-500' :
                      'bg-orange-500/10 text-orange-500'
                    }`}>
                      {run.status}
                    </span>
                    <span class="text-xs text-muted-foreground">
                      {run.pricesFound} prices {run.status === 'cached' ? '(cached)' : 'found'}
                    </span>
                  </div>
                  {run.errorMessage && run.status !== 'cached' && (
                    <div class="mt-2 rounded bg-red-500/10 p-2 text-sm text-red-400">
                      {run.errorMessage}
                    </div>
                  )}
                  <p class="mt-2 text-xs text-muted-foreground">
                    {formatRelativeTime(run.createdAt)} · {run.durationMs ? `${(run.durationMs / 1000).toFixed(1)}s` : ''}
                  </p>
                </div>
                <div class="flex items-center gap-1">
                  <button
                    class="run-scraper-btn inline-flex items-center justify-center rounded-md border border-input bg-background p-1.5 text-sm hover:bg-muted"
                    data-scraper-id={run.productScraper.id}
                    title="Re-run scraper"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                      <polygon points="5 3 19 12 5 21 5 3"/>
                    </svg>
                  </button>
                  <button
                    class="view-logs-btn inline-flex items-center justify-center rounded-md border border-input bg-background p-1.5 text-sm hover:bg-muted"
                    data-type="scraper"
                    data-run-id={run.id}
                    title="View logs"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                      <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
                      <polyline points="14 2 14 8 20 8"/>
                      <line x1="16" x2="8" y1="13" y2="13"/>
                      <line x1="16" x2="8" y1="17" y2="17"/>
                      <line x1="10" x2="8" y1="9" y2="9"/>
                    </svg>
                  </button>
                  <a
                    href={`/products/${run.productScraper.product.id}`}
                    class="inline-flex items-center justify-center rounded-md border border-input bg-background p-1.5 text-sm hover:bg-muted"
                    title="View product"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                      <polyline points="15 3 21 3 21 9" />
                      <line x1="10" x2="21" y1="14" y2="3" />
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    )}

    {/* NBN Refresh History */}
    {nbnRuns.length > 0 && (
      <div class="rounded-lg border border-border bg-card">
        <div class="flex items-center gap-3 p-4 border-b border-border">
          <div class="flex h-8 w-8 items-center justify-center rounded-full bg-blue-500/10">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-blue-500">
              <path d="M5 12.55a11 11 0 0 1 14.08 0" />
              <path d="M1.42 9a16 16 0 0 1 21.16 0" />
              <path d="M8.53 16.11a6 6 0 0 1 6.95 0" />
              <circle cx="12" cy="20" r="1" />
            </svg>
          </div>
          <div>
            <h2 class="font-semibold">NBN Refresh History</h2>
            <p class="text-sm text-muted-foreground">Recent NBN plan refresh runs</p>
          </div>
        </div>
        <div class="divide-y divide-border max-h-[400px] overflow-y-auto">
          {nbnRuns.map((run) => (
            <div class="p-4 hover:bg-muted/50 transition-colors">
              <div class="flex items-start justify-between gap-4">
                <div class="min-w-0 flex-1">
                  <div class="flex items-center gap-2">
                    <span class="font-medium">
                      NBN {run.watchedSpeed?.label || run.watchedSpeedId}
                    </span>
                    <span class={`rounded px-2 py-0.5 text-xs ${
                      run.status === 'success' ? 'bg-green-500/10 text-green-500' :
                      run.status === 'error' ? 'bg-red-500/10 text-red-500' :
                      'bg-orange-500/10 text-orange-500'
                    }`}>
                      {run.status}
                    </span>
                    <span class="text-xs text-muted-foreground">
                      {run.plansFetched} plans fetched
                    </span>
                  </div>
                  {run.errorMessage && (
                    <div class="mt-2 rounded bg-red-500/10 p-2 text-sm text-red-400">
                      {run.errorMessage}
                    </div>
                  )}
                  <p class="mt-2 text-xs text-muted-foreground">
                    {formatRelativeTime(run.createdAt)} · {run.durationMs ? `${(run.durationMs / 1000).toFixed(1)}s` : ''}
                  </p>
                </div>
                <div class="flex items-center gap-1">
                  <button
                    class="run-nbn-btn inline-flex items-center justify-center rounded-md border border-input bg-background p-1.5 text-sm hover:bg-muted"
                    data-speed-tier={run.watchedSpeed?.speed}
                    title="Re-run NBN refresh"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                      <polygon points="5 3 19 12 5 21 5 3"/>
                    </svg>
                  </button>
                  <button
                    class="view-logs-btn inline-flex items-center justify-center rounded-md border border-input bg-background p-1.5 text-sm hover:bg-muted"
                    data-type="nbn"
                    data-run-id={run.id}
                    title="View logs"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                      <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
                      <polyline points="14 2 14 8 20 8"/>
                      <line x1="16" x2="8" y1="13" y2="13"/>
                      <line x1="16" x2="8" y1="17" y2="17"/>
                      <line x1="10" x2="8" y1="9" y2="9"/>
                    </svg>
                  </button>
                  <a
                    href="/nbn"
                    class="inline-flex items-center justify-center rounded-md border border-input bg-background p-1.5 text-sm hover:bg-muted"
                    title="View NBN plans"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                      <polyline points="15 3 21 3 21 9" />
                      <line x1="10" x2="21" y1="14" y2="3" />
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    )}

  </div>
