<script is:inline>
  document.querySelectorAll('.run-scraper-btn').forEach(btn => {
    btn.addEventListener('click', async (e) => {
      e.stopPropagation();
      const scraperId = parseInt(btn.getAttribute('data-scraper-id'), 10);
      const originalHtml = btn.innerHTML;
      const isIconButton = btn.querySelector('svg') !== null;

      btn.disabled = true;
      if (isIconButton) {
        btn.innerHTML = '<svg class="h-4 w-4 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';
      } else {
        btn.textContent = 'Queuing...';
      }

      try {
        const response = await fetch('/api/queue/force-run', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ type: 'scraper', productScraperId: scraperId })
        });

        if (response.ok) {
          if (isIconButton) {
            btn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-4 w-4 text-green-500"><polyline points="20 6 9 17 4 12"/></svg>';
            setTimeout(() => {
              btn.disabled = false;
              btn.innerHTML = originalHtml;
            }, 2000);
          } else {
            btn.textContent = 'Queued!';
            btn.classList.add('bg-green-500', 'text-white');
            setTimeout(() => {
              btn.disabled = false;
              btn.innerHTML = originalHtml;
              btn.classList.remove('bg-green-500', 'text-white');
            }, 2000);
          }
        } else {
          throw new Error('Failed');
        }
      } catch (err) {
        if (isIconButton) {
          btn.innerHTML = originalHtml;
        } else {
          btn.textContent = 'Failed';
          btn.classList.add('bg-red-500', 'text-white');
        }
        btn.disabled = false;
      }
    });
  });

  document.querySelectorAll('.dismiss-btn').forEach(btn => {
    btn.addEventListener('click', async (e) => {
      e.stopPropagation();
      const scraperId = btn.getAttribute('data-scraper-id');
      const originalHtml = btn.innerHTML;

      btn.disabled = true;
      btn.innerHTML = '<svg class="h-4 w-4 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';

      try {
        const response = await fetch(`/api/product-scrapers/${scraperId}/dismiss`, {
          method: 'POST'
        });

        if (response.ok) {
          // Remove the parent item from the DOM with animation
          const item = btn.closest('.p-4');
          if (item) {
            item.style.opacity = '0';
            item.style.transform = 'translateX(-20px)';
            item.style.transition = 'all 0.3s ease';
            setTimeout(() => {
              item.remove();
              window.location.reload();
            }, 300);
          }
        } else {
          btn.innerHTML = originalHtml;
          btn.disabled = false;
        }
      } catch (err) {
        btn.innerHTML = originalHtml;
        btn.disabled = false;
      }
    });
  });

  // Dismiss All button
  const dismissAllBtn = document.getElementById('dismiss-all-btn');
  if (dismissAllBtn) {
    dismissAllBtn.addEventListener('click', async () => {
      const ids = JSON.parse(dismissAllBtn.getAttribute('data-ids') || '[]');
      if (ids.length === 0) return;

      if (!confirm(`Dismiss all ${ids.length} issues?`)) return;

      dismissAllBtn.disabled = true;
      dismissAllBtn.innerHTML = `
        <svg class="h-4 w-4 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Dismissing...
      `;

      try {
        // Dismiss all issues in parallel
        await Promise.all(
          ids.map(id => fetch(`/api/product-scrapers/${id}/dismiss`, { method: 'POST' }))
        );
        window.location.reload();
      } catch (err) {
        dismissAllBtn.textContent = 'Error';
        dismissAllBtn.disabled = false;
      }
    });
  }

  // NBN run buttons
  document.querySelectorAll('.run-nbn-btn').forEach(btn => {
    btn.addEventListener('click', async (e) => {
      e.stopPropagation();
      const speedTier = parseInt(btn.getAttribute('data-speed-tier'), 10);
      const originalHtml = btn.innerHTML;

      if (!speedTier) {
        alert('Invalid speed tier');
        return;
      }

      btn.disabled = true;
      btn.innerHTML = '<svg class="h-4 w-4 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';

      try {
        const response = await fetch('/api/queue/force-run', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ type: 'nbn', speedTier })
        });

        if (response.ok) {
          btn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-4 w-4 text-green-500"><polyline points="20 6 9 17 4 12"/></svg>';
          setTimeout(() => {
            btn.disabled = false;
            btn.innerHTML = originalHtml;
          }, 2000);
        } else {
          throw new Error('Failed');
        }
      } catch (err) {
        btn.innerHTML = originalHtml;
        btn.disabled = false;
        alert('Failed to queue NBN refresh');
      }
    });
  });

  // View Logs buttons
  document.querySelectorAll('.view-logs-btn').forEach(btn => {
    btn.addEventListener('click', async (e) => {
      e.stopPropagation();
      const type = btn.getAttribute('data-type');
      const runId = btn.getAttribute('data-run-id');
      const originalHtml = btn.innerHTML;

      btn.disabled = true;
      btn.innerHTML = '<svg class="h-4 w-4 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';

      try {
        const endpoint = type === 'nbn'
          ? `/api/nbn/refresh-runs/${runId}`
          : `/api/scraper-runs/${runId}`;

        const response = await fetch(endpoint);
        if (!response.ok) throw new Error('Failed to fetch logs');
        const data = await response.json();

        // Create modal content based on type
        let title, subtitle, statsHtml;

        if (type === 'nbn') {
          title = 'NBN Refresh Logs';
          subtitle = data.speedLabel || 'Speed ' + data.speedTier;
          statsHtml = `
            <div class="p-4 border-b border-border grid grid-cols-3 gap-4 text-sm">
              <div><span class="text-muted-foreground">Plans Fetched:</span> <span class="font-medium">${data.plansFetched}</span></div>
              <div><span class="text-muted-foreground">Plans Cached:</span> <span class="font-medium">${data.plansCached}</span></div>
              <div><span class="text-muted-foreground">Snapshots Saved:</span> <span class="font-medium">${data.snapshotsSaved}</span></div>
            </div>
          `;
        } else {
          title = 'Scraper Run Logs';
          subtitle = `Run #${data.id}`;
          statsHtml = `
            <div class="p-4 border-b border-border grid grid-cols-2 gap-4 text-sm">
              <div><span class="text-muted-foreground">Prices Found:</span> <span class="font-medium">${data.pricesFound}</span></div>
              <div><span class="text-muted-foreground">Prices Saved:</span> <span class="font-medium">${data.pricesSaved}</span></div>
            </div>
          `;
        }

        // Create and show modal
        const modal = document.createElement('div');
        modal.className = 'fixed inset-0 z-50 flex items-center justify-center bg-black/50';
        modal.innerHTML = `
          <div class="bg-card border border-border rounded-lg shadow-xl w-full max-w-2xl max-h-[80vh] overflow-hidden">
            <div class="flex items-center justify-between p-4 border-b border-border">
              <div>
                <h3 class="text-lg font-semibold">${title}</h3>
                <p class="text-sm text-muted-foreground">${subtitle}</p>
              </div>
              <div class="flex items-center gap-4">
                <div class="text-sm">
                  <span class="text-muted-foreground">Status:</span>
                  <span class="${data.status === 'success' ? 'text-green-500' : data.status === 'error' ? 'text-red-500' : 'text-orange-500'} font-medium ml-1">${data.status}</span>
                </div>
                <div class="text-sm">
                  <span class="text-muted-foreground">Duration:</span>
                  <span class="ml-1">${data.durationMs ? (data.durationMs / 1000).toFixed(1) + 's' : 'N/A'}</span>
                </div>
                <button class="close-modal p-1 hover:bg-muted rounded">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-5 w-5">
                    <line x1="18" x2="6" y1="6" y2="18"/><line x1="6" x2="18" y1="6" y2="18"/>
                  </svg>
                </button>
              </div>
            </div>
            ${statsHtml}
            <div class="p-4 max-h-[400px] overflow-y-auto">
              <pre class="text-xs font-mono text-zinc-300 whitespace-pre-wrap">${(data.logs || []).join('\n') || 'No logs available'}</pre>
            </div>
            ${data.errorMessage ? `<div class="p-4 border-t border-border bg-red-500/10"><p class="text-sm text-red-500"><strong>Error:</strong> ${data.errorMessage}</p></div>` : ''}
          </div>
        `;
        modal.addEventListener('click', (e) => {
          if (e.target === modal || e.target.closest('.close-modal')) modal.remove();
        });
        document.body.appendChild(modal);

        btn.disabled = false;
        btn.innerHTML = originalHtml;
      } catch (error) {
        console.error('Failed to load logs:', error);
        setTimeout(() => {
          btn.disabled = false;
          btn.innerHTML = originalHtml;
        }, 2000);
      }
    });
  });
</script>
