---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllProductScrapersWithStatus } from '../../lib/db/queries/scrapers';
import { formatRelativeTime } from '../../lib/utils';

const allScrapers = await getAllProductScrapersWithStatus();

// Categorize scrapers
const failedScrapers = allScrapers.filter(ps => ps.lastScrapeStatus === 'error');
const noPricesScrapers = allScrapers.filter(ps => ps.lastScrapeStatus === 'warning');
const neverRunScrapers = allScrapers.filter(ps => !ps.lastScrapedAt);
const successfulScrapers = allScrapers.filter(ps => ps.lastScrapeStatus === 'success');

// Stats
const totalScrapers = allScrapers.length;
const issueCount = failedScrapers.length + noPricesScrapers.length + neverRunScrapers.length;
---

<BaseLayout title="Scraper Issues">
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold tracking-tight">Scraper Issues</h1>
        <p class="text-muted-foreground">Monitor and troubleshoot scraper problems</p>
      </div>
      <a
        href="/"
        class="inline-flex items-center gap-2 rounded-md border border-input bg-background px-4 py-2 text-sm font-medium hover:bg-muted"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
          <path d="m15 18-6-6 6-6" />
        </svg>
        Back to Dashboard
      </a>
    </div>

    <!-- Stats cards -->
    <div class="grid gap-4 md:grid-cols-5">
      <div class="rounded-lg border border-border bg-card p-4">
        <div class="text-sm font-medium text-muted-foreground">Total Scrapers</div>
        <div class="mt-1 text-2xl font-bold">{totalScrapers}</div>
      </div>
      <div class="rounded-lg border border-border bg-card p-4">
        <div class="text-sm font-medium text-muted-foreground">Healthy</div>
        <div class="mt-1 text-2xl font-bold text-green-500">{successfulScrapers.length}</div>
      </div>
      <div class="rounded-lg border border-border bg-card p-4">
        <div class="text-sm font-medium text-muted-foreground">Failed</div>
        <div class="mt-1 text-2xl font-bold text-red-500">{failedScrapers.length}</div>
      </div>
      <div class="rounded-lg border border-border bg-card p-4">
        <div class="text-sm font-medium text-muted-foreground">No Prices</div>
        <div class="mt-1 text-2xl font-bold text-orange-500">{noPricesScrapers.length}</div>
      </div>
      <div class="rounded-lg border border-border bg-card p-4">
        <div class="text-sm font-medium text-muted-foreground">Never Run</div>
        <div class="mt-1 text-2xl font-bold text-yellow-500">{neverRunScrapers.length}</div>
      </div>
    </div>

    {issueCount === 0 ? (
      <div class="rounded-lg border border-border bg-card p-12 text-center">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mx-auto h-12 w-12 text-green-500">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
          <polyline points="22 4 12 14.01 9 11.01" />
        </svg>
        <h3 class="mt-4 text-lg font-semibold">All scrapers healthy!</h3>
        <p class="mt-2 text-muted-foreground">No issues detected with your scrapers.</p>
      </div>
    ) : (
      <div class="space-y-6">
        {/* Failed Scrapers */}
        {failedScrapers.length > 0 && (
          <div class="rounded-lg border border-red-500/20 bg-card">
            <div class="flex items-center gap-3 border-b border-border p-4">
              <div class="flex h-8 w-8 items-center justify-center rounded-full bg-red-500/10">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-red-500">
                  <circle cx="12" cy="12" r="10" />
                  <line x1="15" x2="9" y1="9" y2="15" />
                  <line x1="9" x2="15" y1="9" y2="15" />
                </svg>
              </div>
              <div>
                <h2 class="font-semibold text-red-500">Failed Scrapers</h2>
                <p class="text-sm text-muted-foreground">{failedScrapers.length} scrapers encountered errors</p>
              </div>
            </div>
            <div class="divide-y divide-border">
              {failedScrapers.map((ps) => (
                <div class="p-4 hover:bg-muted/50 transition-colors">
                  <div class="flex items-start justify-between gap-4">
                    <a href={`/products/${ps.product.id}`} class="min-w-0 flex-1 hover:underline">
                      <div class="flex items-center gap-2">
                        <span class="font-medium">
                          {ps.product.name}
                        </span>
                        <span class="rounded bg-muted px-2 py-0.5 text-xs text-muted-foreground">
                          {ps.scraper.name}
                        </span>
                      </div>
                      <p class="mt-1 text-sm text-muted-foreground truncate" title={ps.url}>
                        {ps.url}
                      </p>
                      {ps.lastScrapeError && (
                        <div class="mt-2 rounded bg-red-500/10 p-2 text-sm text-red-400">
                          {ps.lastScrapeError}
                        </div>
                      )}
                      <p class="mt-2 text-xs text-muted-foreground">
                        Last attempt: {ps.lastScrapedAt ? formatRelativeTime(ps.lastScrapedAt) : 'Never'}
                      </p>
                    </a>
                    <button
                      class="run-scraper-btn shrink-0 rounded-md bg-primary px-3 py-1.5 text-sm font-medium text-primary-foreground hover:bg-primary/90"
                      data-scraper-id={ps.id}
                    >
                      Retry
                    </button>
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}

        {/* No Prices Scrapers */}
        {noPricesScrapers.length > 0 && (
          <div class="rounded-lg border border-orange-500/20 bg-card">
            <div class="flex items-center gap-3 border-b border-border p-4">
              <div class="flex h-8 w-8 items-center justify-center rounded-full bg-orange-500/10">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-orange-500">
                  <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z" />
                  <line x1="12" x2="12" y1="9" y2="13" />
                  <line x1="12" x2="12.01" y1="17" y2="17" />
                </svg>
              </div>
              <div>
                <h2 class="font-semibold text-orange-500">No Prices Found</h2>
                <p class="text-sm text-muted-foreground">{noPricesScrapers.length} scrapers ran but found no prices</p>
              </div>
            </div>
            <div class="divide-y divide-border">
              {noPricesScrapers.map((ps) => (
                <div class="p-4 hover:bg-muted/50 transition-colors">
                  <div class="flex items-start justify-between gap-4">
                    <a href={`/products/${ps.product.id}`} class="min-w-0 flex-1 hover:underline">
                      <div class="flex items-center gap-2">
                        <span class="font-medium">
                          {ps.product.name}
                        </span>
                        <span class="rounded bg-muted px-2 py-0.5 text-xs text-muted-foreground">
                          {ps.scraper.name}
                        </span>
                      </div>
                      <p class="mt-1 text-sm text-muted-foreground truncate" title={ps.url}>
                        {ps.url}
                      </p>
                      <p class="mt-2 text-xs text-muted-foreground">
                        Last attempt: {ps.lastScrapedAt ? formatRelativeTime(ps.lastScrapedAt) : 'Never'}
                      </p>
                    </a>
                    <button
                      class="run-scraper-btn shrink-0 rounded-md bg-primary px-3 py-1.5 text-sm font-medium text-primary-foreground hover:bg-primary/90"
                      data-scraper-id={ps.id}
                    >
                      Retry
                    </button>
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}

        {/* Never Run Scrapers */}
        {neverRunScrapers.length > 0 && (
          <div class="rounded-lg border border-yellow-500/20 bg-card">
            <div class="flex items-center gap-3 border-b border-border p-4">
              <div class="flex h-8 w-8 items-center justify-center rounded-full bg-yellow-500/10">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-yellow-500">
                  <circle cx="12" cy="12" r="10" />
                  <line x1="12" x2="12" y1="8" y2="12" />
                  <line x1="12" x2="12.01" y1="16" y2="16" />
                </svg>
              </div>
              <div>
                <h2 class="font-semibold text-yellow-500">Never Run</h2>
                <p class="text-sm text-muted-foreground">{neverRunScrapers.length} scrapers haven't been executed yet</p>
              </div>
            </div>
            <div class="divide-y divide-border">
              {neverRunScrapers.map((ps) => (
                <div class="p-4 hover:bg-muted/50 transition-colors">
                  <div class="flex items-start justify-between gap-4">
                    <a href={`/products/${ps.product.id}`} class="min-w-0 flex-1 hover:underline">
                      <div class="flex items-center gap-2">
                        <span class="font-medium">
                          {ps.product.name}
                        </span>
                        <span class="rounded bg-muted px-2 py-0.5 text-xs text-muted-foreground">
                          {ps.scraper.name}
                        </span>
                      </div>
                      <p class="mt-1 text-sm text-muted-foreground truncate" title={ps.url}>
                        {ps.url}
                      </p>
                    </a>
                    <button
                      class="run-scraper-btn shrink-0 rounded-md bg-primary px-3 py-1.5 text-sm font-medium text-primary-foreground hover:bg-primary/90"
                      data-scraper-id={ps.id}
                    >
                      Run
                    </button>
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}
      </div>
    )}

    {/* All Scrapers Table */}
    <div class="rounded-lg border border-border bg-card">
      <div class="p-4 border-b border-border">
        <h2 class="font-semibold">All Scrapers</h2>
        <p class="text-sm text-muted-foreground">Complete list of configured scrapers</p>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="border-b border-border">
              <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground">Product</th>
              <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground">Type</th>
              <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground">Status</th>
              <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground">Last Run</th>
              <th class="h-12 px-4 text-right align-middle font-medium text-muted-foreground">Actions</th>
            </tr>
          </thead>
          <tbody>
            {allScrapers.map((ps) => (
              <tr class="border-b border-border hover:bg-muted/50 cursor-pointer" onclick={`window.location='/products/${ps.product.id}'`}>
                <td class="p-4">
                  <a href={`/products/${ps.product.id}`} class="font-medium hover:underline">
                    {ps.product.name}
                  </a>
                  <p class="text-xs text-muted-foreground truncate max-w-[300px]" title={ps.url}>
                    {ps.url}
                  </p>
                </td>
                <td class="p-4">
                  <span class="rounded bg-muted px-2 py-1 text-xs">
                    {ps.scraper.name}
                  </span>
                </td>
                <td class="p-4">
                  {ps.lastScrapeStatus === 'success' ? (
                    <span class="inline-flex items-center gap-1 text-green-500">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                        <polyline points="20 6 9 17 4 12" />
                      </svg>
                      OK
                    </span>
                  ) : ps.lastScrapeStatus === 'error' ? (
                    <span class="inline-flex items-center gap-1 text-red-500" title={ps.lastScrapeError || undefined}>
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                        <circle cx="12" cy="12" r="10" />
                        <line x1="15" x2="9" y1="9" y2="15" />
                        <line x1="9" x2="15" y1="9" y2="15" />
                      </svg>
                      Failed
                    </span>
                  ) : ps.lastScrapeStatus === 'warning' ? (
                    <span class="inline-flex items-center gap-1 text-orange-500">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                        <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z" />
                        <line x1="12" x2="12" y1="9" y2="13" />
                        <line x1="12" x2="12.01" y1="17" y2="17" />
                      </svg>
                      No Prices
                    </span>
                  ) : (
                    <span class="inline-flex items-center gap-1 text-yellow-500">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                        <circle cx="12" cy="12" r="10" />
                        <line x1="12" x2="12" y1="8" y2="12" />
                        <line x1="12" x2="12.01" y1="16" y2="16" />
                      </svg>
                      Pending
                    </span>
                  )}
                </td>
                <td class="p-4 text-muted-foreground">
                  {ps.lastScrapedAt ? formatRelativeTime(ps.lastScrapedAt) : 'Never'}
                </td>
                <td class="p-4 text-right">
                  <button
                    class="run-scraper-btn rounded-md border border-input bg-background px-3 py-1.5 text-sm hover:bg-muted"
                    data-scraper-id={ps.id}
                  >
                    Run
                  </button>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</BaseLayout>

<script is:inline>
  document.querySelectorAll('.run-scraper-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const scraperId = btn.getAttribute('data-scraper-id');
      btn.disabled = true;
      btn.textContent = 'Running...';

      try {
        const response = await fetch(`/api/product-scrapers/${scraperId}/run`, {
          method: 'POST'
        });

        if (response.ok) {
          btn.textContent = 'Done!';
          btn.classList.add('bg-green-500', 'text-white');
          setTimeout(() => window.location.reload(), 1000);
        } else {
          btn.textContent = 'Failed';
          btn.classList.add('bg-red-500', 'text-white');
        }
      } catch (err) {
        btn.textContent = 'Error';
        btn.classList.add('bg-red-500', 'text-white');
      }
    });
  });
</script>
