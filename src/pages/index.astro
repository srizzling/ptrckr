<script is:inline>
  // Collapsible groups
  function toggleGroup(header) {
    const content = header.nextElementSibling;
    const chevron = header.querySelector('.group-chevron');

    if (content.style.display === 'none') {
      content.style.display = 'block';
      chevron.style.transform = 'rotate(0deg)';
    } else {
      content.style.display = 'none';
      chevron.style.transform = 'rotate(-90deg)';
    }
  }

  document.querySelectorAll('.group-header').forEach((header) => {
    header.addEventListener('click', (e) => {
      // Don't toggle if clicking delete button
      if (e.target.closest('.delete-group-btn')) return;
      toggleGroup(header);
    });

    // Keyboard support for accessibility
    header.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        if (e.target.closest('.delete-group-btn')) return;
        toggleGroup(header);
      }
    });
  });

  // New Group Modal
  const groupModal = document.getElementById('group-modal');
  const newGroupBtn = document.getElementById('new-group-btn');
  const cancelGroupBtn = document.getElementById('cancel-group-btn');
  const groupForm = document.getElementById('group-form');

  newGroupBtn?.addEventListener('click', () => {
    groupModal.classList.remove('hidden');
    groupModal.classList.add('flex');
  });

  cancelGroupBtn?.addEventListener('click', () => {
    groupModal.classList.add('hidden');
    groupModal.classList.remove('flex');
  });

  groupForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(groupForm);
    const submitBtn = groupForm.querySelector('button[type="submit"]');

    submitBtn.disabled = true;
    submitBtn.textContent = 'Creating...';

    try {
      const response = await fetch('/api/groups', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          name: formData.get('name'),
          description: formData.get('description') || null
        })
      });

      if (response.ok) {
        window.location.reload();
      } else {
        alert('Failed to create group');
      }
    } catch (err) {
      alert('Failed to create group');
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = 'Create Group';
    }
  });

  // Delete group
  document.querySelectorAll('.delete-group-btn').forEach((btn) => {
    btn.addEventListener('click', async (e) => {
      e.preventDefault();
      e.stopPropagation();

      if (!confirm('Delete this group? Products will be moved to Ungrouped.')) return;

      const groupId = btn.getAttribute('data-group-id');
      btn.disabled = true;

      try {
        const response = await fetch(`/api/groups/${groupId}`, {
          method: 'DELETE'
        });

        if (response.ok) {
          window.location.reload();
        } else {
          alert('Failed to delete group');
        }
      } catch (err) {
        alert('Failed to delete group');
      } finally {
        btn.disabled = false;
      }
    });
  });
</script>
