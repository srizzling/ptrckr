        <div class="rounded-lg border border-border bg-card">
          <div class="divide-y divide-border">
            {watchedNbnSpeeds.map((speed) => (
              <a
                href={`/nbn/${speed.id}`}
                class="grid grid-cols-[auto_1fr_auto] items-center gap-4 p-4 transition-colors hover:bg-muted/50"
