                <div class="h-8 w-full">
                  {speed.sparkline && speed.sparkline.length >= 2 && (
                    <svg viewBox="0 0 200 32" preserveAspectRatio="none" class="w-full h-full text-green-500">
                      <path
                        d={generateSparklinePath(speed.sparkline, 200, 32)}
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        vector-effect="non-scaling-stroke"
                      />
                    </svg>
                  )}
                </div>
                <div class="text-right min-w-[100px]">
                  {speed.lowestYearlyCost !== null ? (
                    <span class="text-lg font-semibold text-green-500">
                      {formatPrice(speed.lowestYearlyCost)}/yr
                    </span>
                  ) : (
                    <span class="text-muted-foreground">-</span>
                  )}
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>
    )}

    <!-- Quick Add Confirmation Modal -->
    <div
      id="quick-add-modal"
      class="fixed inset-0 z-50 hidden items-center justify-center bg-black/50"
    >
      <div class="w-full max-w-2xl rounded-lg border border-border bg-card p-6">
        <h3 class="text-lg font-semibold">Confirm Quick Add</h3>
        <p class="text-sm text-muted-foreground">Review and edit the suggested setup before creating</p>

        <form id="quick-add-confirm-form" class="mt-4 space-y-4">
          <div class="space-y-2">
            <label for="confirmProductName" class="text-sm font-medium">Product Name</label>
            <input
              type="text"
              id="confirmProductName"
              name="productName"
              required
              class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
            />
          </div>

          <div class="space-y-2">
            <label for="confirmGroupName" class="text-sm font-medium">
              Group
              <span class="text-xs text-muted-foreground ml-2">(will create new or add to existing)</span>
            </label>
            <input
              type="text"
              id="confirmGroupName"
              name="groupName"
              required
              class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
            />
          </div>

          <div class="space-y-2">
            <label class="text-sm font-medium">Suggested Scrapers</label>
            <div id="suggested-scrapers-list" class="space-y-2">
              <!-- Scrapers will be added here dynamically -->
            </div>
