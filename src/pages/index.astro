                  {group.sparkline && group.sparkline.length >= 2 && (
                    <svg viewBox="0 0 200 24" preserveAspectRatio="none" class="w-full h-full text-green-500">
                      <path
                        d={generateSparklinePath(group.sparkline, 200, 24)}
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        vector-effect="non-scaling-stroke"
                      />
                    </svg>
