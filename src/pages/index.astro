          <div class="flex justify-end gap-4 pt-4">
            <button
              type="button"
              id="cancel-quick-add-btn"
              class="inline-flex items-center justify-center rounded-md border border-input bg-background px-4 py-2 text-sm font-medium"
            >
              Cancel
            </button>
            <button
              type="submit"
              id="confirm-quick-add-btn"
              class="inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground"
            >
              Create Product
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- New Group Modal -->
    <div
      id="group-modal"
      class="fixed inset-0 z-50 hidden items-center justify-center bg-black/50"
    >
      <div class="w-full max-w-md rounded-lg border border-border bg-card p-6">
        <h3 class="text-lg font-semibold">New Group</h3>
        <p class="text-sm text-muted-foreground">Create a group to organize products</p>

        <form id="group-form" class="mt-4 space-y-4">
          <div class="space-y-2">
            <label for="groupName" class="text-sm font-medium">Name</label>
            <input
              type="text"
              id="groupName"
              name="name"
              required
              class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
              placeholder="e.g., 4K OLED Monitors"
            />
          </div>

          <div class="space-y-2">
            <label for="groupDescription" class="text-sm font-medium">Description (optional)</label>
            <input
              type="text"
              id="groupDescription"
              name="description"
              class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
              placeholder="e.g., Looking for a 27-32 inch 4K OLED"
            />
          </div>

          <div class="flex justify-end gap-4 pt-4">
            <button
              type="button"
              id="cancel-group-btn"
              class="inline-flex items-center justify-center rounded-md border border-input bg-background px-4 py-2 text-sm font-medium"
            >
              Cancel
            </button>
            <button
              type="submit"
              class="inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground"
            >
              Create Group
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</BaseLayout>

<script is:inline>
  // Collapsible groups
  function toggleGroup(header) {
    const content = header.nextElementSibling;
    const chevron = header.querySelector('.group-chevron');

    if (content.style.display === 'none') {
      content.style.display = 'block';
      chevron.style.transform = 'rotate(0deg)';
    } else {
      content.style.display = 'none';
      chevron.style.transform = 'rotate(-90deg)';
    }
  }

  document.querySelectorAll('.group-header').forEach((header) => {
    header.addEventListener('click', (e) => {
      // Don't toggle if clicking delete button
      if (e.target.closest('.delete-group-btn')) return;
      toggleGroup(header);
    });

    // Keyboard support for accessibility
    header.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        if (e.target.closest('.delete-group-btn')) return;
        toggleGroup(header);
      }
    });
  });

  // New Group Modal
  const groupModal = document.getElementById('group-modal');
  const newGroupBtn = document.getElementById('new-group-btn');
  const cancelGroupBtn = document.getElementById('cancel-group-btn');
  const groupForm = document.getElementById('group-form');

  newGroupBtn?.addEventListener('click', () => {
    groupModal.classList.remove('hidden');
    groupModal.classList.add('flex');
  });

  cancelGroupBtn?.addEventListener('click', () => {
    groupModal.classList.add('hidden');
    groupModal.classList.remove('flex');
  });

  groupForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(groupForm);
    const submitBtn = groupForm.querySelector('button[type="submit"]');

    submitBtn.disabled = true;
    submitBtn.textContent = 'Creating...';

    try {
      const response = await fetch('/api/groups', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          name: formData.get('name'),
          description: formData.get('description') || null
        })
      });

      if (response.ok) {
        window.location.reload();
      } else {
        alert('Failed to create group');
      }
    } catch (err) {
      alert('Failed to create group');
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = 'Create Group';
    }
  });

  // Delete group
  document.querySelectorAll('.delete-group-btn').forEach((btn) => {
    btn.addEventListener('click', async (e) => {
      e.preventDefault();
      e.stopPropagation();

      if (!confirm('Delete this group? Products will be moved to Ungrouped.')) return;

      const groupId = btn.getAttribute('data-group-id');
      btn.disabled = true;

      try {
        const response = await fetch(`/api/groups/${groupId}`, {
          method: 'DELETE'
        });

        if (response.ok) {
          window.location.reload();
        } else {
          alert('Failed to delete group');
        }
      } catch (err) {
        alert('Failed to delete group');
      } finally {
        btn.disabled = false;
      }
    });
  });

  // Run all scrapers for a group - adds to global queue
  document.querySelectorAll('.run-group-btn').forEach((btn) => {
    btn.addEventListener('click', async (e) => {
      e.preventDefault();
      e.stopPropagation();

      const groupId = btn.getAttribute('data-group-id');
      const originalHtml = btn.innerHTML;
      btn.disabled = true;
      btn.innerHTML = '<svg class="h-4 w-4 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';

      try {
        const response = await fetch(`/api/groups/${groupId}/run-scrapers`, {
          method: 'POST'
        });

        if (!response.ok) {
          throw new Error('Failed to queue scrapers');
        }

        const result = await response.json();
        btn.innerHTML = '<svg class="h-4 w-4 text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12" /></svg>';

        // Show toast notification
        const toast = document.createElement('div');
        toast.className = 'fixed bottom-4 right-4 z-50 flex items-center gap-3 rounded-lg border border-border bg-card p-4 shadow-lg';
        toast.innerHTML = `
          <svg class="h-5 w-5 text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          <div>
            <div class="font-medium">${result.queued} scrapers queued</div>
            <a href="/queue" class="text-sm text-blue-500 hover:underline">View queue</a>
          </div>
        `;
        document.body.appendChild(toast);
        setTimeout(() => toast.remove(), 4000);

        setTimeout(() => {
          btn.innerHTML = originalHtml;
          btn.disabled = false;
        }, 1500);
      } catch (err) {
        console.error('Queue error:', err);
        btn.innerHTML = '<svg class="h-4 w-4 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10" /><line x1="15" x2="9" y1="9" y2="15" /><line x1="9" x2="15" y1="9" y2="15" /></svg>';
        setTimeout(() => {
          btn.innerHTML = originalHtml;
          btn.disabled = false;
        }, 2000);
      }
    });
  });

  // Quick Add functionality
  const quickAddForm = document.getElementById('quick-add-form');
  const quickAddInput = document.getElementById('quick-add-input');
  const quickAddModal = document.getElementById('quick-add-modal');
  const quickAddConfirmForm = document.getElementById('quick-add-confirm-form');
  const cancelQuickAddBtn = document.getElementById('cancel-quick-add-btn');
  const confirmQuickAddBtn = document.getElementById('confirm-quick-add-btn');
  
  let parsedData = null;

  // Handle quick add form submission
  quickAddForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const description = quickAddInput.value.trim();
    
    if (!description) return;
    
    const submitBtn = quickAddForm.querySelector('button[type="submit"]');
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<svg class="h-4 w-4 animate-spin mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>Analyzing...';
    
    try {
      const response = await fetch('/api/quick-add/parse', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ description })
      });
      
      if (!response.ok) {
        throw new Error('Failed to parse description');
      }
      
      parsedData = await response.json();
      
      // Populate confirmation modal
      document.getElementById('confirmProductName').value = parsedData.productName;
      document.getElementById('confirmGroupName').value = parsedData.groupName;
      
      // Build scrapers list
      const scrapersList = document.getElementById('suggested-scrapers-list');
      scrapersList.innerHTML = '';
      
      // Show message if URLs were copied from a similar product
      if (parsedData.copiedFromProduct) {
        const copiedMessage = document.createElement('p');
        copiedMessage.className = 'text-sm text-blue-500 mb-3';
        copiedMessage.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="inline h-4 w-4 mr-1"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>Scraper URLs copied from similar product: "' + parsedData.copiedFromProduct + '" - you can edit them if needed';
        scrapersList.appendChild(copiedMessage);
      }
      
      if (parsedData.suggestedScrapers.length === 0) {
        scrapersList.innerHTML += '<p class="text-sm text-muted-foreground">No scrapers suggested. You\'ll need to add URLs manually.</p>';
      } else {
        parsedData.suggestedScrapers.forEach((scraper) => {
          const scraperDiv = document.createElement('div');
          scraperDiv.className = 'rounded-lg border border-border p-3 space-y-2';
          scraperDiv.innerHTML = `
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium">${scraper.name}</span>
              <button
                type="button"
                class="remove-suggested-scraper text-muted-foreground hover:text-destructive"
                data-scraper-id="${scraper.id}"
              >
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                  <path d="M18 6 6 18"/><path d="m6 6 12 12"/>
                </svg>
              </button>
            </div>
            <div class="flex gap-2">
              <input
                type="url"
                class="scraper-url-input flex h-9 flex-1 rounded-md border border-input bg-background px-3 py-1 text-sm placeholder:text-muted-foreground"
                data-scraper-id="${scraper.id}"
                data-scraper-type="${scraper.type}"
                placeholder="Enter URL to scrape"
                value="${scraper.suggestedUrl || ''}"
                required
              />
              ${scraper.suggestedUrl ? `
                <a
                  href="${scraper.suggestedUrl}"
                  target="_blank"
                  class="inline-flex items-center justify-center rounded-md border border-input bg-background px-3 text-sm hover:bg-accent hover:text-accent-foreground"
                  title="View page"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" x2="21" y1="14" y2="3"/>
                  </svg>
                </a>
              ` : ''}
              <button
                type="button"
                class="test-scraper-btn inline-flex items-center justify-center rounded-md border border-input bg-background px-3 text-sm hover:bg-accent hover:text-accent-foreground"
                data-scraper-id="${scraper.id}"
                data-scraper-type="${scraper.type}"
                title="Test scraper"
              >
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                  <polyline points="9 11 12 14 22 4"/><path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
                </svg>
              </button>
            </div>
            <div class="test-result hidden text-xs"></div>
          `;
          
          // Add remove handler
          scraperDiv.querySelector('.remove-suggested-scraper').addEventListener('click', () => {
            scraperDiv.remove();
          });
          
          // Add test scraper handler
          const testBtn = scraperDiv.querySelector('.test-scraper-btn');
          const urlInput = scraperDiv.querySelector('.scraper-url-input');
          const resultDiv = scraperDiv.querySelector('.test-result');
          
          testBtn.addEventListener('click', async () => {
            const url = urlInput.value.trim();
            if (!url) {
              resultDiv.className = 'test-result text-xs text-yellow-500';
              resultDiv.textContent = 'Please enter a URL first';
              resultDiv.classList.remove('hidden');
              return;
            }
            
            // Show loading state
            testBtn.disabled = true;
            testBtn.innerHTML = '<svg class="h-4 w-4 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';
            resultDiv.className = 'test-result text-xs text-muted-foreground';
            resultDiv.textContent = 'Testing...';
            resultDiv.classList.remove('hidden');
            
            try {
              const response = await fetch('/api/quick-add/test-scraper', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                  url: url,
                  scraperType: scraper.type
                })
              });
              
              const result = await response.json();
              
              if (result.success && result.pricesFound > 0) {
                resultDiv.className = 'test-result text-xs text-green-500';
                resultDiv.innerHTML = '✓ Found ' + result.pricesFound + ' price' + (result.pricesFound !== 1 ? 's' : '');
                if (result.samplePrices && result.samplePrices.length > 0) {
                  const samples = result.samplePrices.map(p => p.retailerName + ': $' + p.price).join(', ');
                  resultDiv.innerHTML += ' (' + samples + ')';
                }
              } else {
                resultDiv.className = 'test-result text-xs text-red-500';
                resultDiv.textContent = '✗ ' + (result.message || 'No prices found');
              }
            } catch (err) {
              resultDiv.className = 'test-result text-xs text-red-500';
              resultDiv.textContent = '✗ Test failed: ' + (err instanceof Error ? err.message : 'Unknown error');
            } finally {
              testBtn.disabled = false;
              testBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4"><polyline points="9 11 12 14 22 4"/><path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/></svg>';
            }
          });
          
          scrapersList.appendChild(scraperDiv);
        });
      }
      
      // Show modal
      quickAddModal.classList.remove('hidden');
      quickAddModal.classList.add('flex');
      
    } catch (err) {
      console.error('Quick add error:', err);
      // Show error toast instead of alert
      const errorToast = document.createElement('div');
      errorToast.className = 'fixed bottom-4 right-4 z-50 flex items-center gap-3 rounded-lg border border-border bg-card p-4 shadow-lg';
      errorToast.innerHTML = `
        <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="15" x2="9" y1="9" y2="15"/><line x1="9" x2="15" y1="9" y2="15"/></svg>
        <div>
          <div class="font-medium">Failed to parse description</div>
          <div class="text-sm text-muted-foreground">${err instanceof Error ? err.message : 'Please try again'}</div>
        </div>
      `;
      document.body.appendChild(errorToast);
      setTimeout(() => errorToast.remove(), 4000);
    } finally {
      submitBtn.disabled = false;
      submitBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2 h-4 w-4"><circle cx="12" cy="12" r="10"/><polyline points="16 12 12 8 8 12"/><line x1="12" x2="12" y1="16" y2="8"/></svg>Add Item';
    }
  });

  // Cancel quick add
  cancelQuickAddBtn?.addEventListener('click', () => {
    quickAddModal.classList.add('hidden');
    quickAddModal.classList.remove('flex');
    parsedData = null;
  });

  // Confirm and create
  quickAddConfirmForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const productName = document.getElementById('confirmProductName').value.trim();
    const groupName = document.getElementById('confirmGroupName').value.trim();
    
    // Collect scraper URLs
    const scrapers = [];
    document.querySelectorAll('.scraper-url-input').forEach((input) => {
      const url = input.value.trim();
      const scraperIdStr = input.getAttribute('data-scraper-id');
      if (url && scraperIdStr) {
        const scraperId = Number(scraperIdStr);
        if (!isNaN(scraperId)) {
          scrapers.push({
            scraperId,
            url: url,
            scrapeIntervalMinutes: 1440
          });
        }
      }
    });
    
    if (scrapers.length === 0) {
      // Show error toast instead of alert
      const errorToast = document.createElement('div');
      errorToast.className = 'fixed bottom-4 right-4 z-50 flex items-center gap-3 rounded-lg border border-border bg-card p-4 shadow-lg';
      errorToast.innerHTML = `
        <svg class="h-5 w-5 text-yellow-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="12" x2="12" y1="8" y2="12"/><line x1="12" x2="12.01" y1="16" y2="16"/></svg>
        <div>
          <div class="font-medium">No scrapers added</div>
          <div class="text-sm text-muted-foreground">Please add at least one scraper URL</div>
        </div>
      `;
      document.body.appendChild(errorToast);
      setTimeout(() => errorToast.remove(), 4000);
      return;
    }
    
    confirmQuickAddBtn.disabled = true;
    confirmQuickAddBtn.textContent = 'Creating...';
    
    try {
      const response = await fetch('/api/quick-add/create', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          productName,
          groupName,
          groupId: parsedData?.groupId,
          scrapers
        })
      });
      
      if (!response.ok) {
        throw new Error('Failed to create product');
      }
      
      const result = await response.json();
      
      // Show success and reload
      quickAddInput.value = '';
      quickAddModal.classList.add('hidden');
      quickAddModal.classList.remove('flex');
      
      // Show toast
      const toast = document.createElement('div');
      toast.className = 'fixed bottom-4 right-4 z-50 flex items-center gap-3 rounded-lg border border-border bg-card p-4 shadow-lg';
      toast.innerHTML = `
        <svg class="h-5 w-5 text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
        <div>
          <div class="font-medium">Product added successfully!</div>
          <a href="/products/${result.product.id}" class="text-sm text-blue-500 hover:underline">View product →</a>
        </div>
      `;
      document.body.appendChild(toast);
      setTimeout(() => {
        toast.remove();
        window.location.reload();
      }, 2000);
      
    } catch (err) {
      console.error('Create error:', err);
      // Show error toast instead of alert
      const errorToast = document.createElement('div');
      errorToast.className = 'fixed bottom-4 right-4 z-50 flex items-center gap-3 rounded-lg border border-border bg-card p-4 shadow-lg';
      errorToast.innerHTML = `
        <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="15" x2="9" y1="9" y2="15"/><line x1="9" x2="15" y1="9" y2="15"/></svg>
        <div>
          <div class="font-medium">Failed to create product</div>
          <div class="text-sm text-muted-foreground">${err instanceof Error ? err.message : 'Please try again'}</div>
        </div>
      `;
      document.body.appendChild(errorToast);
      setTimeout(() => errorToast.remove(), 4000);
    } finally {
      confirmQuickAddBtn.disabled = false;
      confirmQuickAddBtn.textContent = 'Create Product';
    }
  });
</script>
