                <div class="h-8 w-full">
                  {speed.sparkline && speed.sparkline.length >= 2 && (
                    <svg viewBox="0 0 200 32" preserveAspectRatio="none" class="w-full h-full text-green-500">
                      <path
                        d={generateSparklinePath(speed.sparkline, 200, 32)}
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        vector-effect="non-scaling-stroke"
                      />
                    </svg>
                  )}
                </div>
                <div class="text-right min-w-[100px]">
                  {speed.lowestYearlyCost !== null ? (
                    <span class="text-lg font-semibold text-green-500">
                      {formatPrice(speed.lowestYearlyCost)}/yr
                    </span>
                  ) : (
                    <span class="text-muted-foreground">-</span>
                  )}
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>
    )}

    <!-- New Group Modal -->
    <div
      id="group-modal"
      class="fixed inset-0 z-50 hidden items-center justify-center bg-black/50 p-4"
    >
      <div class="w-full max-w-4xl max-h-[90vh] overflow-y-auto rounded-lg border border-border bg-card p-6">
        <h3 class="text-lg font-semibold">New Group</h3>
        <p class="text-sm text-muted-foreground">Create a group to organize products</p>

        <form id="group-form" class="mt-4 space-y-4">
          <div class="space-y-2">
            <label for="groupName" class="text-sm font-medium">Name</label>
            <input
              type="text"
              id="groupName"
              name="name"
              required
              class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
              placeholder="e.g., Nappies Size 2"
            />
            <p id="similarity-hint" class="text-xs text-muted-foreground hidden"></p>
          </div>

          <div class="space-y-2">
            <label for="groupDescription" class="text-sm font-medium">Description (optional)</label>
            <input
              type="text"
              id="groupDescription"
              name="description"
              class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
              placeholder="e.g., Looking for a 27-32 inch 4K OLED"
            />
          </div>

          <!-- Products section (hidden initially, shown when cloning) -->
          <div id="products-section" class="hidden space-y-4 border-t border-border pt-4">
            <div class="flex items-center justify-between">
              <div>
                <h4 class="text-sm font-semibold">Products</h4>
                <p class="text-xs text-muted-foreground" id="clone-source-text"></p>
              </div>
            </div>
            <div id="products-list" class="space-y-3">
              <!-- Products will be dynamically added here -->
            </div>
          </div>

          <div class="flex justify-end gap-4 pt-4 border-t border-border">
            <button
              type="button"
              id="cancel-group-btn"
              class="inline-flex items-center justify-center rounded-md border border-input bg-background px-4 py-2 text-sm font-medium"
            >
              Cancel
            </button>
            <button
              type="submit"
              id="submit-group-btn"
              class="inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground"
            >
              Create Group
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</BaseLayout>

<script is:inline>
  // Collapsible groups
  function toggleGroup(header) {
    const content = header.nextElementSibling;
    const chevron = header.querySelector('.group-chevron');

    if (content.style.display === 'none') {
      content.style.display = 'block';
      chevron.style.transform = 'rotate(0deg)';
    } else {
      content.style.display = 'none';
      chevron.style.transform = 'rotate(-90deg)';
    }
  }

  document.querySelectorAll('.group-header').forEach((header) => {
    header.addEventListener('click', (e) => {
      // Don't toggle if clicking delete button
      if (e.target.closest('.delete-group-btn')) return;
      toggleGroup(header);
    });

    // Keyboard support for accessibility
    header.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        if (e.target.closest('.delete-group-btn')) return;
        toggleGroup(header);
      }
    });
  });

  // New Group Modal with Quick-Add
  const groupModal = document.getElementById('group-modal');
  const newGroupBtn = document.getElementById('new-group-btn');
  const cancelGroupBtn = document.getElementById('cancel-group-btn');
  const groupForm = document.getElementById('group-form');
  const groupNameInput = document.getElementById('groupName');
  const similarityHint = document.getElementById('similarity-hint');
  const productsSection = document.getElementById('products-section');
  const productsList = document.getElementById('products-list');
  const cloneSourceText = document.getElementById('clone-source-text');
  const submitGroupBtn = document.getElementById('submit-group-btn');

  let parsedData = null;
  let debounceTimer = null;

  // Reset modal state
  function resetModal() {
    groupForm.reset();
    similarityHint.classList.add('hidden');
    productsSection.classList.add('hidden');
    productsList.innerHTML = '';
    parsedData = null;
  }

  newGroupBtn?.addEventListener('click', () => {
    resetModal();
    groupModal.classList.remove('hidden');
    groupModal.classList.add('flex');
    groupNameInput.focus();
  });

  cancelGroupBtn?.addEventListener('click', () => {
    groupModal.classList.add('hidden');
    groupModal.classList.remove('flex');
  });

  // Parse group name as user types
  groupNameInput?.addEventListener('input', async (e) => {
    const input = e.target.value.trim();
    
    // Clear previous timer
    if (debounceTimer) {
      clearTimeout(debounceTimer);
    }

    // Hide hint and products if input is empty
    if (!input) {
      similarityHint.classList.add('hidden');
      productsSection.classList.add('hidden');
      parsedData = null;
      return;
    }

    // Debounce API call
    debounceTimer = setTimeout(async () => {
      try {
        const response = await fetch('/api/quick-add/parse', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ input })
        });

        if (response.ok) {
          parsedData = await response.json();
          
          if (parsedData.sourceGroupId && parsedData.products.length > 0) {
            // Show similarity hint
            const percent = Math.round(parsedData.similarityScore * 100);
            similarityHint.textContent = `${percent}% similar to "${parsedData.sourceGroupName}" - clone products?`;
            similarityHint.classList.remove('hidden');
            
            // Show products section
            cloneSourceText.textContent = `Cloning from "${parsedData.sourceGroupName}"`;
            productsSection.classList.remove('hidden');
            
            // Render products
            renderProducts(parsedData.products);
          } else {
            similarityHint.classList.add('hidden');
            productsSection.classList.add('hidden');
            parsedData = null;
          }
        }
      } catch (err) {
        console.error('Parse error:', err);
      }
    }, 500);
  });

  // Render products with editable fields
  function renderProducts(products) {
    productsList.innerHTML = '';
    
    products.forEach((product, productIdx) => {
      const productCard = document.createElement('div');
      productCard.className = 'rounded-lg border border-border p-4 space-y-3 bg-muted/20';
      
      productCard.innerHTML = `
        <div class="space-y-2">
          <label class="text-xs font-medium text-muted-foreground">Product ${productIdx + 1} Name</label>
          <input
            type="text"
            class="product-name flex h-9 w-full rounded-md border border-input bg-background px-3 py-1 text-sm"
            value="${product.name}"
            data-product-idx="${productIdx}"
            required
          />
        </div>
        <div class="space-y-2">
          <label class="text-xs font-medium text-muted-foreground">Scrapers (${product.scrapers.length})</label>
          <div class="space-y-2" id="scrapers-${productIdx}">
            ${product.scrapers.map((scraper, scraperIdx) => `
              <div class="rounded border border-border p-2 space-y-2 bg-background">
                <div class="flex items-center justify-between text-xs text-muted-foreground">
                  <span>${scraper.scraperName}</span>
                </div>
                <input
                  type="url"
                  class="scraper-url flex h-8 w-full rounded-md border border-input bg-background px-2 py-1 text-xs"
                  value="${scraper.url}"
                  data-product-idx="${productIdx}"
                  data-scraper-idx="${scraperIdx}"
                  placeholder="https://..."
                  required
                />
              </div>
            `).join('')}
          </div>
        </div>
      `;
      
      productsList.appendChild(productCard);
    });
  }

  groupForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(groupForm);

    submitGroupBtn.disabled = true;
    submitGroupBtn.textContent = 'Creating...';

    try {
      // Check if we're cloning products
      if (parsedData && parsedData.products.length > 0) {
        // Collect updated product data from form
        const products = parsedData.products.map((product, productIdx) => {
          const nameInput = productsList.querySelector(`.product-name[data-product-idx="${productIdx}"]`);
          const scrapers = product.scrapers.map((scraper, scraperIdx) => {
            const urlInput = productsList.querySelector(
              `.scraper-url[data-product-idx="${productIdx}"][data-scraper-idx="${scraperIdx}"]`
            );
            return {
              scraperId: scraper.scraperId,
              url: urlInput.value,
              scrapeIntervalMinutes: scraper.scrapeIntervalMinutes
            };
          });
          
          return {
            name: nameInput.value,
            imageUrl: product.imageUrl,
            scrapers
          };
        });

        // Call bulk create endpoint
        const response = await fetch('/api/quick-add/create', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            groupName: formData.get('name'),
            description: formData.get('description') || null,
            products
          })
        });

        if (response.ok) {
          window.location.reload();
        } else {
          const error = await response.json();
          alert(error.message || 'Failed to create group with products');
        }
      } else {
        // Regular group creation (no products)
        const response = await fetch('/api/groups', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            name: formData.get('name'),
            description: formData.get('description') || null
          })
      });

      if (response.ok) {
        if (response.ok) {
          window.location.reload();
        } else {
          const error = await response.json();
          alert(error.message || 'Failed to create group');
        }
      }
    } catch (err) {
      alert('Failed to create group');
    } finally {
      submitGroupBtn.disabled = false;
      submitGroupBtn.textContent = 'Create Group';
    }
  });

  // Delete group
  document.querySelectorAll('.delete-group-btn').forEach((btn) => {
    btn.addEventListener('click', async (e) => {
      e.preventDefault();
      e.stopPropagation();

      if (!confirm('Delete this group? Products will be moved to Ungrouped.')) return;

      const groupId = btn.getAttribute('data-group-id');
      btn.disabled = true;

      try {
        const response = await fetch(`/api/groups/${groupId}`, {
          method: 'DELETE'
        });

        if (response.ok) {
          window.location.reload();
        } else {
          alert('Failed to delete group');
        }
      } catch (err) {
        alert('Failed to delete group');
      } finally {
        btn.disabled = false;
      }
    });
  });

  // Run all scrapers for a group - adds to global queue
  document.querySelectorAll('.run-group-btn').forEach((btn) => {
    btn.addEventListener('click', async (e) => {
      e.preventDefault();
      e.stopPropagation();

      const groupId = btn.getAttribute('data-group-id');
      const originalHtml = btn.innerHTML;
      btn.disabled = true;
      btn.innerHTML = '<svg class="h-4 w-4 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';

      try {
        const response = await fetch(`/api/groups/${groupId}/run-scrapers`, {
          method: 'POST'
        });

        if (!response.ok) {
          throw new Error('Failed to queue scrapers');
        }

        const result = await response.json();
        btn.innerHTML = '<svg class="h-4 w-4 text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12" /></svg>';

        // Show toast notification
        const toast = document.createElement('div');
        toast.className = 'fixed bottom-4 right-4 z-50 flex items-center gap-3 rounded-lg border border-border bg-card p-4 shadow-lg';
        toast.innerHTML = `
          <svg class="h-5 w-5 text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          <div>
            <div class="font-medium">${result.queued} scrapers queued</div>
            <a href="/queue" class="text-sm text-blue-500 hover:underline">View queue</a>
          </div>
        `;
        document.body.appendChild(toast);
        setTimeout(() => toast.remove(), 4000);

        setTimeout(() => {
          btn.innerHTML = originalHtml;
          btn.disabled = false;
        }, 1500);
      } catch (err) {
        console.error('Queue error:', err);
        btn.innerHTML = '<svg class="h-4 w-4 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10" /><line x1="15" x2="9" y1="9" y2="15" /><line x1="9" x2="15" y1="9" y2="15" /></svg>';
        setTimeout(() => {
          btn.innerHTML = originalHtml;
          btn.disabled = false;
        }, 2000);
      }
    });
  });
</script>
