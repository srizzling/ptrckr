                    <p class="text-sm text-muted-foreground">
                      {ungroupedProducts.length} product{ungroupedProducts.length !== 1 ? 's' : ''}
                    </p>
                  </div>
                </div>
                <div class="h-6 w-full">
                  {ungroupedSparkline && ungroupedSparkline.length >= 2 && (
                    <svg viewBox="0 0 200 24" preserveAspectRatio="none" class="w-full h-full text-green-500">
                      <path
                        d={generateSparklinePath(ungroupedSparkline, 200, 24)}
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        vector-effect="non-scaling-stroke"
                      />
                    </svg>
