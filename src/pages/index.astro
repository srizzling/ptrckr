    {/* NBN Plans Section */}
    {watchedNbnSpeeds.length > 0 && (
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-lg font-semibold">NBN Plans</h2>
            <p class="text-sm text-muted-foreground">Tracked speed tiers with cheapest plans</p>
