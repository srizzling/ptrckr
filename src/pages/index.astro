---
import BaseLayout from '../layouts/BaseLayout.astro';
import { initializeServer } from '../lib/server-init';
import { getProductsWithStats } from '../lib/db/queries/products';
import { getGlobalStats } from '../lib/db/queries/prices';
import { getGroups } from '../lib/db/queries/groups';
import { getWatchedSpeedsWithStats } from '../lib/db/queries/nbn';
import { formatPrice, formatRelativeTime } from '../lib/utils';

// Initialize server on first request
await initializeServer();

const products = await getProductsWithStats();
const stats = await getGlobalStats();
const groups = await getGroups();
const watchedNbnSpeeds = await getWatchedSpeedsWithStats();

const totalProducts = products.length;
const activeScrapers = products.reduce((acc, p) => acc + p.scraperCount, 0);

// Get product IDs that are in groups
const productIdsInGroups = new Set(
  groups.flatMap((g) => g.productGroups.map((pg) => pg.productId))
);

// Ungrouped products
const ungroupedProducts = products.filter((p) => !productIdsInGroups.has(p.id));

// Helper function to generate sparkline SVG path
function generateSparklinePath(data: number[], width: number, height: number): string {
  if (!data || data.length < 2) return '';

  const min = Math.min(...data);
  const max = Math.max(...data);
  const range = max - min || 1;

  const points = data.map((value, i) => {
    const x = (i / (data.length - 1)) * width;
    const y = height - ((value - min) / range) * (height - 4) - 2;
    return `${x},${y}`;
  });

  return `M${points.join(' L')}`;
}

// Helper to combine sparklines from multiple products (lowest per day)
function combineSparklines(productsData: { sparkline: number[] }[]): number[] {
  const maxLen = Math.max(...productsData.map(p => p.sparkline?.length || 0));
  if (maxLen === 0) return [];

  const combined: number[] = [];
  for (let i = 0; i < maxLen; i++) {
    const dayPrices = productsData
      .map(p => p.sparkline?.[i])
      .filter((p): p is number => p !== undefined && p !== null);
    if (dayPrices.length > 0) {
      combined.push(Math.min(...dayPrices));
    }
  }
  return combined;
}

// Ungrouped stats
const ungroupedLowestPrice = ungroupedProducts.length > 0
  ? Math.min(...ungroupedProducts.map(p => p.lowestPrice).filter((p): p is number => p !== null))
  : null;
const ungroupedSparkline = combineSparklines(ungroupedProducts);

// Products by group (with stats)
const groupsWithProducts = groups.map((group) => {
  const groupProducts = group.productGroups
    .map((pg) => products.find((p) => p.id === pg.productId))
    .filter(Boolean) as typeof products;

  const lowestPrice = groupProducts.length > 0
    ? Math.min(...groupProducts.map(p => p.lowestPrice).filter((p): p is number => p !== null))
    : null;

  const combinedSparkline = combineSparklines(groupProducts);

  return {
    ...group,
    products: groupProducts,
    lowestPrice: Number.isFinite(lowestPrice) ? lowestPrice : null,
    sparkline: combinedSparkline
  };
});
