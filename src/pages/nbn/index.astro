---
import BaseLayout from '../../layouts/BaseLayout.astro';

const speedTiers = [
  { value: '25', label: 'NBN 25 (25/5 Mbps)' },
  { value: '50', label: 'NBN 50 (50/20 Mbps)' },
  { value: '100', label: 'NBN 100 (100/20 Mbps)' },
  { value: '250', label: 'NBN 250 (250/25 Mbps)' },
  { value: '500', label: 'NBN 500 (500/50 Mbps)' },
  { value: '1000', label: 'NBN 1000 (1000/50 Mbps)' }
];
---

<BaseLayout title="NBN Plan Comparison">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold tracking-tight">NBN Plan Comparison</h1>
      <p class="text-muted-foreground">Compare NBN plans with true yearly costs including promos</p>
    </div>

    <!-- Filters -->
    <div class="flex flex-wrap gap-4 items-end">
      <div class="space-y-2">
        <label for="speed" class="text-sm font-medium text-muted-foreground">Speed Tier</label>
        <div class="relative">
          <select
            id="speed"
            class="appearance-none h-10 w-full rounded-md border border-border bg-card pl-3 pr-10 py-2 text-sm cursor-pointer hover:bg-muted/50 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-background min-w-[220px]"
          >
            {speedTiers.map(tier => (
              <option value={tier.value} selected={tier.value === '100'}>{tier.label}</option>
            ))}
          </select>
          <svg class="pointer-events-none absolute right-3 top-1/2 -translate-y-1/2 h-4 w-4 text-muted-foreground" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m6 9 6 6 6-6"/>
          </svg>
        </div>
      </div>

      <div class="space-y-2">
        <label for="sort" class="text-sm font-medium text-muted-foreground">Sort By</label>
        <div class="relative">
          <select
            id="sort"
            class="appearance-none h-10 w-full rounded-md border border-border bg-card pl-3 pr-10 py-2 text-sm cursor-pointer hover:bg-muted/50 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-background min-w-[220px]"
          >
            <option value="yearly_cost:asc">Yearly Cost (Low to High)</option>
            <option value="yearly_cost:desc">Yearly Cost (High to Low)</option>
            <option value="monthly_price:asc">Monthly Price (Low to High)</option>
            <option value="monthly_price:desc">Monthly Price (High to Low)</option>
            <option value="yearly_savings:desc">Best Promo Savings</option>
          </select>
          <svg class="pointer-events-none absolute right-3 top-1/2 -translate-y-1/2 h-4 w-4 text-muted-foreground" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m6 9 6 6 6-6"/>
          </svg>
        </div>
      </div>

      <button
        id="refresh-btn"
        class="h-10 px-4 rounded-md bg-primary text-primary-foreground text-sm font-medium hover:bg-primary/90 transition-colors disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:bg-primary"
      >
        Refresh
      </button>

      <button
        id="watch-btn"
        class="h-10 px-4 rounded-md border border-border bg-card text-sm font-medium hover:bg-muted/50 transition-colors flex items-center gap-2"
        title="Track cheapest plan for this speed tier on dashboard"
      >
        <svg id="watch-icon-off" class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/>
          <circle cx="12" cy="12" r="3"/>
        </svg>
        <svg id="watch-icon-on" class="h-4 w-4 hidden text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/>
          <circle cx="12" cy="12" r="3"/>
        </svg>
        <span id="watch-text">Watch</span>
      </button>
    </div>

    <!-- Refresh status -->
    <div id="refresh-status" class="text-xs text-muted-foreground">
      <span id="last-refresh">Last refreshed: --</span>
    </div>

    <!-- Results summary -->
    <div id="summary" class="text-sm text-muted-foreground">
      Loading plans...
    </div>

    <!-- Plans table -->
    <div class="rounded-lg border border-border bg-card overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-muted/50">
            <tr>
              <th class="px-4 py-3 text-left text-sm font-medium">Provider</th>
              <th class="px-4 py-3 text-left text-sm font-medium">Plan</th>
              <th class="px-4 py-3 text-left text-sm font-medium">Speed</th>
              <th class="px-4 py-3 text-right text-sm font-medium">Monthly</th>
              <th class="px-4 py-3 text-right text-sm font-medium">Promo</th>
              <th class="px-4 py-3 text-right text-sm font-medium">Setup</th>
              <th class="px-4 py-3 text-right text-sm font-medium text-green-500">Yearly Cost</th>
              <th class="px-4 py-3 text-right text-sm font-medium">Eff. Monthly</th>
              <th class="px-4 py-3 text-center text-sm font-medium">Actions</th>
            </tr>
          </thead>
          <tbody id="plans-table" class="divide-y divide-border">
            <tr>
              <td colspan="9" class="px-4 py-8 text-center text-muted-foreground">
                <div class="flex items-center justify-center gap-2">
                  <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  Loading plans...
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Load more -->
    <div id="load-more-container" class="hidden flex justify-center">
      <button
        id="load-more-btn"
        class="px-6 py-2 rounded-md border border-input bg-background text-sm font-medium hover:bg-muted"
      >
        Load More Plans
      </button>
    </div>
  </div>
</BaseLayout>

<script is:inline>
  const speedSelect = document.getElementById('speed');
  const sortSelect = document.getElementById('sort');
  const refreshBtn = document.getElementById('refresh-btn');
  const watchBtn = document.getElementById('watch-btn');
  const watchIconOff = document.getElementById('watch-icon-off');
  const watchIconOn = document.getElementById('watch-icon-on');
  const watchText = document.getElementById('watch-text');
  const plansTable = document.getElementById('plans-table');
  const summary = document.getElementById('summary');
  const loadMoreContainer = document.getElementById('load-more-container');
  const loadMoreBtn = document.getElementById('load-more-btn');
  const lastRefreshEl = document.getElementById('last-refresh');

  let currentSkip = 0;
  let allPlans = [];
  const LIMIT = 50;
  let refreshCountdownInterval = null;

  // Watched speeds state: { speed: { id, watched } }
  let watchedSpeeds = {};

  function formatPrice(price) {
    return new Intl.NumberFormat('en-AU', {
      style: 'currency',
      currency: 'AUD'
    }).format(price);
  }

  function formatRelativeTime(date) {
    const now = new Date();
    const diff = now - date;
    const seconds = Math.floor(diff / 1000);
    const minutes = Math.floor(seconds / 60);
    const hours = Math.floor(minutes / 60);
    const days = Math.floor(hours / 24);

    if (days > 0) return `${days}d ago`;
    if (hours > 0) return `${hours}h ago`;
    if (minutes > 0) return `${minutes}m ago`;
    return 'just now';
  }

  function formatCountdown(targetDate) {
    const now = new Date();
    const diff = targetDate - now;
    if (diff <= 0) return 'now';

    const minutes = Math.floor(diff / 60000);
    const seconds = Math.floor((diff % 60000) / 1000);

    if (minutes > 60) {
      const hours = Math.floor(minutes / 60);
      const mins = minutes % 60;
      return `${hours}h ${mins}m`;
    }
    return `${minutes}m ${seconds}s`;
  }

  async function loadRefreshStatus() {
    try {
      const speed = speedSelect.value;
      const response = await fetch(`/api/nbn/refresh?speed=${speed}`);
      const data = await response.json();

      // Update last refresh time for this speed tier
      // Reset classes first
      lastRefreshEl.classList.remove('text-yellow-500', 'text-red-500');

      if (data.cached_at) {
        const cachedAt = new Date(data.cached_at);
        const ageMs = Date.now() - cachedAt.getTime();
        const ageHours = ageMs / (1000 * 60 * 60);

        lastRefreshEl.textContent = `Last refreshed: ${formatRelativeTime(cachedAt)}`;
        lastRefreshEl.title = cachedAt.toLocaleString();

        // Highlight stale data
        if (ageHours >= 72) {
          // More than 3 days - red
          lastRefreshEl.classList.add('text-red-500');
        } else if (ageHours >= 24) {
          // More than 1 day - yellow
          lastRefreshEl.classList.add('text-yellow-500');
        }
      } else {
        lastRefreshEl.textContent = 'Last refreshed: never';
        lastRefreshEl.title = '';
        lastRefreshEl.classList.add('text-yellow-500');
      }

      // Update button state based on rate limit
      if (data.can_refresh) {
        refreshBtn.disabled = false;
        refreshBtn.textContent = 'Refresh';
        if (refreshCountdownInterval) {
          clearInterval(refreshCountdownInterval);
          refreshCountdownInterval = null;
        }
      } else if (data.next_allowed_at) {
        const nextAllowed = new Date(data.next_allowed_at);
        refreshBtn.disabled = true;

        // Start countdown on button
        const updateCountdown = () => {
          const countdown = formatCountdown(nextAllowed);
          refreshBtn.textContent = `Refresh (${countdown})`;

          if (new Date() >= nextAllowed) {
            clearInterval(refreshCountdownInterval);
            refreshCountdownInterval = null;
            loadRefreshStatus(); // Reload status
          }
        };
        updateCountdown();
        if (refreshCountdownInterval) clearInterval(refreshCountdownInterval);
        refreshCountdownInterval = setInterval(updateCountdown, 1000);
      }

    } catch (error) {
      console.error('Error loading refresh status:', error);
    }
  }

  function getPromoText(plan) {
    if (!plan.promo_value || !plan.promo_duration) return '-';
    return `-${formatPrice(plan.promo_value)}/mo for ${plan.promo_duration}mo`;
  }

  function renderPlans(plans, append = false) {
    if (!append) {
      plansTable.innerHTML = '';
    }

    if (plans.length === 0 && !append) {
      plansTable.innerHTML = `
        <tr>
          <td colspan="9" class="px-4 py-8 text-center text-muted-foreground">
            No plans found for this speed tier
          </td>
        </tr>
      `;
      return;
    }

    plans.forEach((plan, index) => {
      const row = document.createElement('tr');
      row.className = 'hover:bg-muted/50 transition-colors';

      const savingsClass = plan.yearly_savings > 0 ? 'text-green-500' : '';
      const rankBadge = !append && index < 3 ? `<span class="ml-2 px-1.5 py-0.5 text-xs rounded ${index === 0 ? 'bg-yellow-500/20 text-yellow-500' : 'bg-muted text-muted-foreground'}">#${index + 1}</span>` : '';

      row.innerHTML = `
        <td class="px-4 py-3">
          <a href="${plan.provider_website}" target="_blank" class="font-medium hover:underline">
            ${plan.provider_name}
          </a>
        </td>
        <td class="px-4 py-3">
          <div class="flex items-center">
            ${plan.plan_name}${rankBadge}
          </div>
        </td>
        <td class="px-4 py-3 text-sm text-muted-foreground">
          ${plan.download_speed}/${plan.upload_speed} Mbps
        </td>
        <td class="px-4 py-3 text-right font-mono">
          ${formatPrice(plan.monthly_price)}
        </td>
        <td class="px-4 py-3 text-right text-sm ${plan.promo_value ? 'text-green-500' : 'text-muted-foreground'}">
          ${getPromoText(plan)}
        </td>
        <td class="px-4 py-3 text-right text-sm text-muted-foreground">
          ${plan.setup_fee > 0 ? formatPrice(plan.setup_fee) : '-'}
        </td>
        <td class="px-4 py-3 text-right font-mono font-semibold text-green-500">
          ${formatPrice(plan.yearly_cost)}
        </td>
        <td class="px-4 py-3 text-right font-mono text-sm ${savingsClass}">
          ${formatPrice(plan.effective_monthly)}
        </td>
        <td class="px-4 py-3 text-center">
          <a href="${plan.cis_url}" target="_blank" class="text-xs text-muted-foreground hover:text-foreground">
            CIS
          </a>
        </td>
      `;
      plansTable.appendChild(row);
    });
  }

  async function loadPlans(reset = true) {
    if (reset) {
      currentSkip = 0;
      allPlans = [];
      plansTable.innerHTML = `
        <tr>
          <td colspan="9" class="px-4 py-8 text-center text-muted-foreground">
            <div class="flex items-center justify-center gap-2">
              <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              Loading plans...
            </div>
          </td>
        </tr>
      `;
    }

    const speed = speedSelect.value;
    const [sortBy, sortOrder] = sortSelect.value.split(':');

    try {
      const params = new URLSearchParams({
        speed,
        sort_by: sortBy === 'yearly_cost' || sortBy === 'yearly_savings' ? 'monthly_price' : sortBy,
        sort_order: sortOrder,
        skip: currentSkip.toString(),
        limit: LIMIT.toString()
      });

      const response = await fetch(`/api/nbn/plans?${params}`);
      const data = await response.json();

      if (data.error) {
        throw new Error(data.error);
      }

      // Client-side sort for yearly_cost and yearly_savings
      let plans = data.plans;
      if (sortBy === 'yearly_cost') {
        plans.sort((a, b) => sortOrder === 'asc' ? a.yearly_cost - b.yearly_cost : b.yearly_cost - a.yearly_cost);
      } else if (sortBy === 'yearly_savings') {
        plans.sort((a, b) => b.yearly_savings - a.yearly_savings);
      }

      allPlans = reset ? plans : [...allPlans, ...plans];
      renderPlans(plans, !reset);

      summary.textContent = `Showing ${allPlans.length} of ${data.total} plans`;

      if (data.has_more) {
        loadMoreContainer.classList.remove('hidden');
        currentSkip += LIMIT;
      } else {
        loadMoreContainer.classList.add('hidden');
      }
    } catch (error) {
      console.error('Error loading plans:', error);
      plansTable.innerHTML = `
        <tr>
          <td colspan="9" class="px-4 py-8 text-center text-red-500">
            Failed to load plans: ${error.message}
          </td>
        </tr>
      `;
      summary.textContent = 'Error loading plans';
    }
  }

  // Watch functionality
  async function loadWatchedSpeeds() {
    try {
      const response = await fetch('/api/nbn/watch');
      const data = await response.json();

      // Build lookup by speed
      watchedSpeeds = {};
      for (const ws of data.speeds || []) {
        watchedSpeeds[ws.speed] = { id: ws.id, watched: true };
      }

      updateWatchButton();
    } catch (error) {
      console.error('Error loading watched speeds:', error);
    }
  }

  function updateWatchButton() {
    const speed = parseInt(speedSelect.value);
    const isWatched = watchedSpeeds[speed]?.watched;

    if (isWatched) {
      watchIconOff.classList.add('hidden');
      watchIconOn.classList.remove('hidden');
      watchText.textContent = 'Watching';
      watchBtn.classList.add('border-green-500/50');
    } else {
      watchIconOff.classList.remove('hidden');
      watchIconOn.classList.add('hidden');
      watchText.textContent = 'Watch';
      watchBtn.classList.remove('border-green-500/50');
    }
  }

  async function toggleWatch() {
    const speed = parseInt(speedSelect.value);
    const isWatched = watchedSpeeds[speed]?.watched;

    watchBtn.disabled = true;
    watchText.textContent = isWatched ? 'Unwatching...' : 'Watching...';

    try {
      if (isWatched) {
        // Unwatch
        await fetch('/api/nbn/watch', {
          method: 'DELETE',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id: watchedSpeeds[speed].id })
        });
        delete watchedSpeeds[speed];
      } else {
        // Watch
        const response = await fetch('/api/nbn/watch', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ speed })
        });
        const data = await response.json();
        watchedSpeeds[speed] = { id: data.watchedSpeed.id, watched: true };
      }
    } catch (error) {
      console.error('Error toggling watch:', error);
    } finally {
      watchBtn.disabled = false;
      updateWatchButton();
    }
  }

  async function doRefresh() {
    const speed = speedSelect.value;
    refreshBtn.disabled = true;
    refreshBtn.textContent = 'Refreshing...';

    try {
      const response = await fetch(`/api/nbn/refresh?speed=${speed}`, { method: 'POST' });
      const data = await response.json();

      if (response.status === 429) {
        // Rate limited
        console.log('Rate limited:', data);
      } else if (data.error) {
        console.error('Refresh error:', data.error);
      } else {
        // Success - reload plans
        await loadPlans();
      }
    } catch (error) {
      console.error('Refresh failed:', error);
    } finally {
      await loadRefreshStatus();
    }
  }

  // Event listeners
  speedSelect.addEventListener('change', () => {
    loadPlans();
    loadRefreshStatus();
    updateWatchButton();
  });
  sortSelect.addEventListener('change', () => loadPlans());
  refreshBtn.addEventListener('click', doRefresh);
  loadMoreBtn.addEventListener('click', () => loadPlans(false));
  watchBtn.addEventListener('click', toggleWatch);

  // Initial load
  loadWatchedSpeeds();
  loadRefreshStatus();
  loadPlans();
</script>
