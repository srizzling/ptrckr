---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getNotificationConfigs } from '../../lib/db/queries/notifications';
import { getProducts } from '../../lib/db/queries/products';

const notifications = await getNotificationConfigs();
const products = await getProducts();
---

<BaseLayout title="Settings">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold tracking-tight">Settings</h1>
      <p class="text-muted-foreground">Configure notifications and preferences</p>
    </div>

    <!-- Notification Configurations -->
    <div class="rounded-lg border border-border bg-card">
      <div class="flex items-center justify-between border-b border-border p-6">
        <div>
          <h2 class="text-lg font-semibold">Notifications</h2>
          <p class="text-sm text-muted-foreground">
            Configure when and how you want to be notified
          </p>
        </div>
        <button
          id="add-notification-btn"
          class="inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground shadow transition-colors hover:bg-primary/90"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="mr-2 h-4 w-4"
          >
            <path d="M5 12h14" />
            <path d="M12 5v14" />
          </svg>
          Add Notification
        </button>
      </div>

      {
        notifications.length === 0 ? (
          <div class="flex flex-col items-center justify-center py-12 text-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-12 w-12 text-muted-foreground/50"
            >
              <path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9" />
              <path d="M10.3 21a1.94 1.94 0 0 0 3.4 0" />
            </svg>
            <h3 class="mt-4 text-lg font-semibold">No notifications configured</h3>
            <p class="mt-2 text-sm text-muted-foreground">
              Add a Discord webhook to receive price alerts
            </p>
          </div>
        ) : (
          <div class="divide-y divide-border">
            {notifications.map((config) => (
              <div class="flex items-center justify-between p-6">
                <div class="space-y-1">
                  <div class="flex items-center gap-2">
                    <span
                      class={`inline-flex items-center rounded-full px-2 py-0.5 text-xs font-semibold ${config.enabled ? 'bg-green-500/20 text-green-500' : 'bg-muted text-muted-foreground'}`}
                    >
                      {config.enabled ? 'Active' : 'Disabled'}
                    </span>
                    <span class="inline-flex items-center rounded-full border px-2 py-0.5 text-xs font-semibold">
                      {config.channel}
                    </span>
                    <span class="inline-flex items-center rounded-full bg-secondary px-2 py-0.5 text-xs font-semibold text-secondary-foreground">
                      {config.triggerType.replace('_', ' ')}
                    </span>
                  </div>
                  <p class="text-sm">
                    {config.product
                      ? `Product: ${config.product.name}`
                      : 'All Products (Global)'}
                  </p>
                  <p class="text-xs text-muted-foreground truncate max-w-md">
                    {config.webhookUrl.substring(0, 50)}...
                  </p>
                </div>
                <div class="flex items-center gap-2">
                  <button
                    class="test-notification-btn inline-flex items-center justify-center rounded-md border border-input bg-background px-3 py-1.5 text-sm font-medium transition-colors hover:bg-accent hover:text-accent-foreground"
                    data-id={config.id}
                    data-channel={config.channel}
                    data-webhook={config.webhookUrl}
                  >
                    Test
                  </button>
                  <button
                    class="delete-notification-btn inline-flex items-center justify-center rounded-md bg-destructive px-3 py-1.5 text-sm font-medium text-destructive-foreground transition-colors hover:bg-destructive/90"
                    data-id={config.id}
                  >
                    Delete
                  </button>
                </div>
              </div>
            ))}
          </div>
        )
      }
    </div>

    <!-- Add Notification Modal -->
    <div
      id="notification-modal"
      class="fixed inset-0 z-50 hidden items-center justify-center bg-black/50"
    >
      <div class="w-full max-w-md rounded-lg border border-border bg-card p-6">
        <h3 class="text-lg font-semibold">Add Notification</h3>
        <p class="text-sm text-muted-foreground">
          Configure a new notification channel
        </p>

        <form id="notification-form" class="mt-4 space-y-4">
          <div class="space-y-2">
            <label for="channel" class="text-sm font-medium">Channel</label>
            <select
              id="channel"
              name="channel"
              class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
            >
              <option value="discord">Discord</option>
            </select>
          </div>

          <div class="space-y-2">
            <label for="webhookUrl" class="text-sm font-medium">Webhook URL</label>
            <input
              type="url"
              id="webhookUrl"
              name="webhookUrl"
              required
              class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
              placeholder="https://discord.com/api/webhooks/..."
            />
          </div>

          <div class="space-y-2">
            <label for="productId" class="text-sm font-medium">Product</label>
            <select
              id="productId"
              name="productId"
              class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
            >
              <option value="">All Products (Global)</option>
              {products.map((product) => (
                <option value={product.id}>{product.name}</option>
              ))}
            </select>
          </div>

          <div class="space-y-2">
            <label for="triggerType" class="text-sm font-medium">Trigger</label>
            <select
              id="triggerType"
              name="triggerType"
              class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
            >
              <option value="price_drop">Price Drop</option>
              <option value="price_increase">Price Increase</option>
              <option value="any_change">Any Change</option>
              <option value="below_threshold">Below Threshold</option>
            </select>
          </div>

          <div id="threshold-group" class="hidden space-y-2">
            <label for="thresholdValue" class="text-sm font-medium">
              Threshold ($)
            </label>
            <input
              type="number"
              id="thresholdValue"
              name="thresholdValue"
              step="0.01"
              min="0"
              class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
              placeholder="100.00"
            />
          </div>

          <div class="flex justify-end gap-4 pt-4">
            <button
              type="button"
              id="cancel-modal-btn"
              class="inline-flex items-center justify-center rounded-md border border-input bg-background px-4 py-2 text-sm font-medium"
            >
              Cancel
            </button>
            <button
              type="submit"
              class="inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground"
            >
              Add Notification
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  const modal = document.getElementById('notification-modal') as HTMLDivElement;
  const addBtn = document.getElementById('add-notification-btn');
  const cancelBtn = document.getElementById('cancel-modal-btn');
  const form = document.getElementById('notification-form') as HTMLFormElement;
  const triggerSelect = document.getElementById('triggerType') as HTMLSelectElement;
  const thresholdGroup = document.getElementById('threshold-group') as HTMLDivElement;

  // Show/hide modal
  addBtn?.addEventListener('click', () => {
    modal.classList.remove('hidden');
    modal.classList.add('flex');
  });

  cancelBtn?.addEventListener('click', () => {
    modal.classList.add('hidden');
    modal.classList.remove('flex');
  });

  // Show threshold input when needed
  triggerSelect?.addEventListener('change', () => {
    if (triggerSelect.value === 'below_threshold') {
      thresholdGroup.classList.remove('hidden');
    } else {
      thresholdGroup.classList.add('hidden');
    }
  });

  // Form submission
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(form);

    try {
      const response = await fetch('/api/notifications', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          channel: formData.get('channel'),
          webhookUrl: formData.get('webhookUrl'),
          productId: formData.get('productId') || null,
          triggerType: formData.get('triggerType'),
          thresholdValue: formData.get('thresholdValue') || null
        })
      });

      if (response.ok) {
        window.location.reload();
      } else {
        alert('Failed to create notification');
      }
    } catch (err) {
      alert('Failed to create notification');
    }
  });

  // Test notifications
  document.querySelectorAll('.test-notification-btn').forEach((btn) => {
    btn.addEventListener('click', async () => {
      const channel = btn.getAttribute('data-channel');
      const webhook = btn.getAttribute('data-webhook');

      btn.textContent = 'Testing...';
      btn.disabled = true;

      try {
        const response = await fetch('/api/notifications/test', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ channel, webhookUrl: webhook })
        });

        if (response.ok) {
          btn.textContent = 'Sent!';
          setTimeout(() => {
            btn.textContent = 'Test';
            btn.disabled = false;
          }, 2000);
        } else {
          alert('Failed to send test notification');
          btn.textContent = 'Test';
          btn.disabled = false;
        }
      } catch (err) {
        alert('Failed to send test notification');
        btn.textContent = 'Test';
        btn.disabled = false;
      }
    });
  });

  // Delete notifications
  document.querySelectorAll('.delete-notification-btn').forEach((btn) => {
    btn.addEventListener('click', async () => {
      if (!confirm('Delete this notification?')) return;

      const id = btn.getAttribute('data-id');

      try {
        const response = await fetch(`/api/notifications/${id}`, {
          method: 'DELETE'
        });

        if (response.ok) {
          window.location.reload();
        } else {
          alert('Failed to delete notification');
        }
      } catch (err) {
        alert('Failed to delete notification');
      }
    });
  });
</script>
